<UserControl x:Class="SmartRecipe.Wpf.Views.UserProfileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Background="{StaticResource BackgroundBrush}">

    <UserControl.Resources>
        <!-- Enhanced Profile Card Style -->
        <Style x:Key="ProfileCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardGradientBrush}" />
            <Setter Property="CornerRadius" Value="20" />
            <Setter Property="Padding" Value="32" />
            <Setter Property="BorderBrush" Value="{StaticResource OutlineBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#20000000" BlurRadius="16" ShadowDepth="8" Opacity="0.15"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Recipe Card Style -->
        <Style x:Key="RecipeCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}" />
            <Setter Property="CornerRadius" Value="16" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#15000000" BlurRadius="12" ShadowDepth="4" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#25000000" BlurRadius="20" ShadowDepth="8" Opacity="0.2"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <TranslateTransform Y="-4"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="32">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Enhanced Profile Header -->
            <Border Grid.Row="0" Style="{StaticResource ProfileCardStyle}" Margin="0,0,0,32">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="32"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Enhanced Profile Avatar -->
                    <Grid Grid.Column="0">
                        <Border Width="120" Height="120"
                               CornerRadius="60"
                               Background="{StaticResource PrimaryGradientBrush}">
                            <Border.Effect>
                                <DropShadowEffect Color="#30000000" BlurRadius="16" ShadowDepth="8" Opacity="0.25"/>
                            </Border.Effect>
                            <TextBlock Text="ðŸ‘¤" 
                                      FontSize="48"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      Foreground="White"/>
                        </Border>

                        <!-- Status Indicator -->
                        <Border Width="24" Height="24"
                               CornerRadius="12"
                               Background="{StaticResource SuccessBrush}"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Bottom"
                               Margin="0,0,8,8">
                            <TextBlock Text="âœ“" 
                                      FontSize="12"
                                      FontWeight="Bold"
                                      Foreground="White"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>
                    </Grid>

                    <!-- Enhanced Profile Info -->
                    <StackPanel Grid.Column="2" VerticalAlignment="Center">
                        <!-- Display Mode -->
                        <StackPanel Visibility="{Binding IsEditing, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                            <TextBlock Text="{Binding User.UserName}" 
                                      FontSize="32"
                                      FontWeight="Bold"
                                      Foreground="{StaticResource TextPrimaryBrush}"
                                      Margin="0,0,0,8"/>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                <Border Background="{StaticResource InfoBrush}"
                                       CornerRadius="12"
                                       Padding="12,6"
                                       Margin="0,0,12,0">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="âœ‰ï¸" FontSize="14" Margin="0,0,6,0"/>
                                        <TextBlock Text="{Binding User.Email}" 
                                                  FontSize="14"
                                                  FontWeight="Medium"
                                                  Foreground="White"/>
                                    </StackPanel>
                                </Border>

                                <Border Background="{StaticResource WarningBrush}"
                                       CornerRadius="12"
                                       Padding="12,6">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="ðŸ‘‘" FontSize="14" Margin="0,0,6,0"/>
                                        <TextBlock Text="{Binding User.Role}" 
                                                  FontSize="14"
                                                  FontWeight="SemiBold"
                                                  Foreground="White"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>

                            <!-- Profile Stats -->
                            <StackPanel Orientation="Horizontal">
                                <Border Background="{StaticResource SurfaceVariantBrush}"
                                       CornerRadius="12"
                                       Padding="16,8"
                                       Margin="0,0,12,0">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="ðŸ“š" FontSize="16" Margin="0,0,8,0"/>
                                        <TextBlock Text="{Binding UserRecipes.Count}" 
                                                  FontSize="16"
                                                  FontWeight="Bold"
                                                  Foreground="{StaticResource PrimaryBrush}"
                                                  Margin="0,0,4,0"/>
                                        <TextBlock Text="Recipes" 
                                                  FontSize="14"
                                                  Foreground="{StaticResource TextSecondaryBrush}"/>
                                    </StackPanel>
                                </Border>

                                <Border Background="{StaticResource SurfaceVariantBrush}"
                                       CornerRadius="12"
                                       Padding="16,8">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="ðŸ“…" FontSize="16" Margin="0,0,8,0"/>
                                        <TextBlock Text="Member since" 
                                                  FontSize="14"
                                                  Foreground="{StaticResource TextSecondaryBrush}"
                                                  Margin="0,0,4,0"/>
                                        <TextBlock Text="{Binding User.CreatedAt, StringFormat='{}{0:MMM yyyy}'}" 
                                                  FontSize="14"
                                                  FontWeight="Medium"
                                                  Foreground="{StaticResource TextPrimaryBrush}"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </StackPanel>

                        <!-- Edit Mode -->
                        <StackPanel Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Username" 
                                              FontSize="14"
                                              FontWeight="SemiBold"
                                              Foreground="{StaticResource TextPrimaryBrush}"
                                              Margin="0,0,0,8"/>
                                    <Border BorderBrush="{StaticResource OutlineBrush}"
                                           BorderThickness="1"
                                           CornerRadius="8"
                                           Background="White">
                                        <TextBox Text="{Binding NewUsername, UpdateSourceTrigger=PropertyChanged}"
                                                Padding="16,12"
                                                FontSize="14"
                                                BorderThickness="0"
                                                Background="Transparent"/>
                                    </Border>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Email" 
                                              FontSize="14"
                                              FontWeight="SemiBold"
                                              Foreground="{StaticResource TextPrimaryBrush}"
                                              Margin="0,0,0,8"/>
                                    <Border BorderBrush="{StaticResource OutlineBrush}"
                                           BorderThickness="1"
                                           CornerRadius="8"
                                           Background="White">
                                        <TextBox Text="{Binding NewEmail, UpdateSourceTrigger=PropertyChanged}"
                                                Padding="16,12"
                                                FontSize="14"
                                                BorderThickness="0"
                                                Background="Transparent"/>
                                    </Border>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </StackPanel>

                    <!-- Enhanced Action Buttons -->
                    <StackPanel Grid.Column="3" VerticalAlignment="Center">
                        <!-- Display Mode Buttons -->
                        <Button Content="âœï¸ Edit Profile"
                               Command="{Binding EditProfileCommand}"
                               Style="{StaticResource PrimaryButtonStyle}"
                               Padding="20,12"
                               FontSize="14"
                               Visibility="{Binding IsEditing, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>

                        <!-- Edit Mode Buttons -->
                        <StackPanel Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Button Content="ðŸ’¾ Save Changes"
                                   Command="{Binding SaveProfileCommand}"
                                   Style="{StaticResource PrimaryButtonStyle}"
                                   Padding="20,12"
                                   FontSize="14"
                                   Margin="0,0,0,12"
                                   IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}"/>
                            <Button Content="âŒ Cancel"
                                   Command="{Binding CancelEditCommand}"
                                   Style="{StaticResource SecondaryButtonStyle}"
                                   Padding="20,12"
                                   FontSize="14"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Success/Error Messages -->
            <StackPanel Grid.Row="1" Margin="0,0,0,24">
                <!-- Success Message -->
                <Border Background="#E8F5E8"
                       BorderBrush="{StaticResource SuccessBrush}"
                       BorderThickness="1"
                       CornerRadius="12"
                       Padding="16,12"
                       Margin="0,0,0,12"
                       Visibility="{Binding SuccessMessage, Converter={StaticResource StringToVisibilityConverter}}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="âœ…" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="{Binding SuccessMessage}"
                                  FontSize="14"
                                  FontWeight="Medium"
                                  Foreground="#2E7D32"
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Error Message -->
                <Border Background="#FFF3E0"
                       BorderBrush="{StaticResource ErrorBrush}"
                       BorderThickness="1"
                       CornerRadius="12"
                       Padding="16,12"
                       Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="âš ï¸" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="{Binding ErrorMessage}"
                                  FontSize="14"
                                  FontWeight="Medium"
                                  Foreground="#D32F2F"
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Enhanced Content Area -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="32"/>
                    <ColumnDefinition Width="350"/>
                </Grid.ColumnDefinitions>

                <!-- Enhanced User Recipes -->
                <Border Grid.Column="0" Style="{StaticResource ProfileCardStyle}">
                    <StackPanel>
                        <Grid Margin="0,0,0,24">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ³" FontSize="24" Margin="0,0,12,0" VerticalAlignment="Center"/>
                                <TextBlock Text="My Recipe Collection" 
                                          FontSize="24"
                                          FontWeight="Bold"
                                          Foreground="{StaticResource TextPrimaryBrush}"
                                          VerticalAlignment="Center"/>
                            </StackPanel>

                            <Button Content="âž• Create New Recipe"
                                   Command="{Binding CreateRecipeCommand}"
                                   Style="{StaticResource PrimaryButtonStyle}"
                                   HorizontalAlignment="Right"
                                   Padding="16,12"/>
                        </Grid>

                        <!-- Enhanced Recipes Grid -->
                        <ScrollViewer MaxHeight="700" VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding UserRecipes}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid Columns="2"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>

                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource RecipeCardStyle}"
                                               Margin="12"
                                               Height="280">
                                            <Border.InputBindings>
                                                <MouseBinding MouseAction="LeftClick" 
                                                             Command="{Binding DataContext.ViewRecipeCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                             CommandParameter="{Binding}"/>
                                            </Border.InputBindings>

                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="140"/>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>

                                                <!-- Enhanced Recipe Image -->
                                                <Border Grid.Row="0" 
                                                       Background="{StaticResource PrimaryGradientBrush}"
                                                       CornerRadius="16,16,0,0">
                                                    <Grid>
                                                        <TextBlock Text="ðŸ½ï¸" 
                                                                  FontSize="40"
                                                                  HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"
                                                                  Foreground="White"/>

                                                        <!-- Difficulty Badge -->
                                                        <Border Background="#30000000"
                                                               CornerRadius="12"
                                                               Padding="8,4"
                                                               HorizontalAlignment="Right"
                                                               VerticalAlignment="Top"
                                                               Margin="12">
                                                            <TextBlock Text="â­ Easy" 
                                                                      FontSize="12"
                                                                      FontWeight="SemiBold"
                                                                      Foreground="White"/>
                                                        </Border>
                                                    </Grid>
                                                </Border>

                                                <!-- Enhanced Recipe Info -->
                                                <StackPanel Grid.Row="1" Margin="20,16,20,20">
                                                    <TextBlock Text="{Binding Title}" 
                                                              FontSize="16"
                                                              FontWeight="Bold"
                                                              Foreground="{StaticResource TextPrimaryBrush}"
                                                              TextTrimming="CharacterEllipsis"
                                                              Margin="0,0,0,8"/>

                                                    <TextBlock Text="{Binding Description}" 
                                                              FontSize="13"
                                                              Foreground="{StaticResource TextSecondaryBrush}"
                                                              TextTrimming="CharacterEllipsis"
                                                              MaxHeight="32"
                                                              TextWrapping="Wrap"
                                                              Margin="0,0,0,12"/>

                                                    <!-- Recipe Metrics -->
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <Border Grid.Column="0"
                                                               Background="{StaticResource AccentBrush}"
                                                               CornerRadius="12"
                                                               Padding="12,6"
                                                               HorizontalAlignment="Left">
                                                            <TextBlock Text="{Binding Category}" 
                                                                      FontSize="11"
                                                                      Foreground="White"
                                                                      FontWeight="SemiBold"/>
                                                        </Border>

                                                        <StackPanel Grid.Column="1" 
                                                                   Orientation="Horizontal"
                                                                   Margin="8,0">
                                                            <TextBlock Text="â±ï¸" FontSize="14" Margin="0,0,4,0"/>
                                                            <TextBlock Text="{Binding PrepTimeMinutes}" 
                                                                      FontSize="12"
                                                                      FontWeight="Medium"
                                                                      Foreground="{StaticResource TextSecondaryBrush}"/>
                                                            <TextBlock Text="min" 
                                                                      FontSize="12"
                                                                      Foreground="{StaticResource TextSecondaryBrush}"
                                                                      Margin="2,0,0,0"/>
                                                        </StackPanel>

                                                        <StackPanel Grid.Column="2" Orientation="Horizontal">
                                                            <TextBlock Text="â¤ï¸" FontSize="14" Margin="0,0,4,0"/>
                                                            <TextBlock Text="{Binding LikesCount}" 
                                                                      FontSize="12"
                                                                      FontWeight="Medium"
                                                                      Foreground="{StaticResource TextSecondaryBrush}"/>
                                                        </StackPanel>
                                                    </Grid>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>

                        <!-- Enhanced Empty State -->
                        <StackPanel HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"
                                   Margin="0,60,0,0"
                                   Visibility="{Binding UserRecipes.Count, Converter={StaticResource CountToVisibilityConverter}}">

                            <Border Background="{StaticResource SurfaceVariantBrush}"
                                   Width="120" Height="120"
                                   CornerRadius="60"
                                   Margin="0,0,0,24">
                                <TextBlock Text="ðŸ“" FontSize="48" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>

                            <TextBlock Text="Start Your Culinary Journey" 
                                      FontSize="20"
                                      FontWeight="Bold"
                                      Foreground="{StaticResource TextPrimaryBrush}"
                                      HorizontalAlignment="Center"
                                      Margin="0,0,0,8"/>

                            <TextBlock Text="Share your favorite recipes with the community" 
                                      FontSize="14"
                                      Foreground="{StaticResource TextSecondaryBrush}"
                                      HorizontalAlignment="Center"
                                      Margin="0,0,0,24"/>

                            <Button Content="ðŸš€ Create Your First Recipe"
                                   Command="{Binding CreateRecipeCommand}"
                                   Style="{StaticResource PrimaryButtonStyle}"
                                   Padding="24,16"
                                   FontSize="16"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Enhanced Sidebar -->
                <StackPanel Grid.Column="2">
                    <!-- Achievement Section -->
                    <Border Style="{StaticResource ProfileCardStyle}" Margin="0,0,0,24">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                                <TextBlock Text="ðŸ†" FontSize="20" Margin="0,0,8,0"/>
                                <TextBlock Text="Achievements" 
                                          FontSize="18"
                                          FontWeight="Bold"
                                          Foreground="{StaticResource TextPrimaryBrush}"/>
                            </StackPanel>

                            <StackPanel>
                                <!-- First Recipe Badge -->
                                <Border Background="{StaticResource SuccessBrush}"
                                       CornerRadius="12"
                                       Padding="16,12"
                                       Margin="0,0,0,12">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="ðŸ¥‡" FontSize="16" Margin="0,0,12,0"/>
                                        <StackPanel>
                                            <TextBlock Text="First Recipe" 
                                                      FontSize="14"
                                                      FontWeight="SemiBold"
                                                      Foreground="White"/>
                                            <TextBlock Text="Created your first recipe" 
                                                      FontSize="12"
                                                      Foreground="#E8F5E8"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>

                                <!-- Recipe Creator Badge -->
                                <Border Background="{StaticResource InfoBrush}"
                                       CornerRadius="12"
                                       Padding="16,12">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="ðŸ‘¨â€ðŸ³" FontSize="16" Margin="0,0,12,0"/>
                                        <StackPanel>
                                            <TextBlock Text="Recipe Creator" 
                                                      FontSize="14"
                                                      FontWeight="SemiBold"
                                                      Foreground="White"/>
                                            <TextBlock Text="Active community member" 
                                                      FontSize="12"
                                                      Foreground="#E3F2FD"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Enhanced Profile Statistics -->
                    <Border Style="{StaticResource ProfileCardStyle}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                                <TextBlock Text="ðŸ“Š" FontSize="20" Margin="0,0,8,0"/>
                                <TextBlock Text="Profile Statistics" 
                                          FontSize="18"
                                          FontWeight="Bold"
                                          Foreground="{StaticResource TextPrimaryBrush}"/>
                            </StackPanel>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Total Recipes -->
                                <Border Grid.Row="0" 
                                       Background="{StaticResource SurfaceVariantBrush}"
                                       CornerRadius="12"
                                       Padding="16,12"
                                       Margin="0,0,0,12">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" 
                                                  Text="ðŸ“š" 
                                                  FontSize="16" 
                                                  Margin="0,0,12,0"/>

                                        <TextBlock Grid.Column="1" 
                                                  Text="Total Recipes" 
                                                  FontSize="14"
                                                  FontWeight="Medium"
                                                  Foreground="{StaticResource TextSecondaryBrush}"
                                                  VerticalAlignment="Center"/>

                                        <TextBlock Grid.Column="2" 
                                                  Text="{Binding UserRecipes.Count}" 
                                                  FontSize="18"
                                                  FontWeight="Bold"
                                                  Foreground="{StaticResource PrimaryBrush}"/>
                                    </Grid>
                                </Border>

                                <!-- Member Since -->
                                <Border Grid.Row="1" 
                                       Background="{StaticResource SurfaceVariantBrush}"
                                       CornerRadius="12"
                                       Padding="16,12"
                                       Margin="0,0,0,12">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" 
                                                  Text="ðŸ“…" 
                                                  FontSize="16" 
                                                  Margin="0,0,12,0"/>

                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="Member Since" 
                                                      FontSize="12"
                                                      Foreground="{StaticResource TextSecondaryBrush}"/>
                                            <TextBlock Text="{Binding User.CreatedAt, StringFormat='{}{0:MMMM yyyy}'}" 
                                                      FontSize="14"
                                                      FontWeight="SemiBold"
                                                      Foreground="{StaticResource TextPrimaryBrush}"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>

                                <!-- Account Type -->
                                <Border Grid.Row="2" 
                                       Background="{StaticResource SurfaceVariantBrush}"
                                       CornerRadius="12"
                                       Padding="16,12">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" 
                                                  Text="ðŸ‘¤" 
                                                  FontSize="16" 
                                                  Margin="0,0,12,0"/>

                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="Account Type" 
                                                      FontSize="12"
                                                      Foreground="{StaticResource TextSecondaryBrush}"/>
                                            <TextBlock Text="{Binding User.Role}" 
                                                      FontSize="14"
                                                      FontWeight="SemiBold"
                                                      Foreground="{StaticResource AccentBrush}"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>

            <!-- Enhanced Loading Indicator -->
            <Grid Grid.Row="0" Grid.RowSpan="3"
                  Background="#80000000"
                  Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                <Border Background="{StaticResource SurfaceBrush}"
                       CornerRadius="16"
                       Padding="32,24"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center">
                    <StackPanel HorizontalAlignment="Center">
                        <Border Width="48" Height="48"
                               Background="{StaticResource PrimaryBrush}"
                               CornerRadius="24"
                               Margin="0,0,0,16">
                            <TextBlock Text="ðŸ‘¤" 
                                      FontSize="24"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      Foreground="White"/>
                        </Border>

                        <ProgressBar Width="120" Height="4" 
                                    IsIndeterminate="True"
                                    Background="{StaticResource OutlineVariantBrush}"
                                    Foreground="{StaticResource PrimaryBrush}"
                                    Margin="0,0,0,12"/>

                        <TextBlock Text="Updating profile..." 
                                  HorizontalAlignment="Center"
                                  FontSize="14"
                                  FontWeight="Medium"
                                  Foreground="{StaticResource TextSecondaryBrush}"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>