<UserControl x:Class="SmartRecipe.Wpf.Views.CreateRecipeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Background="{StaticResource BackgroundBrush}">

    <UserControl.Resources>
        <!-- Enhanced Form Card Style -->
        <Style x:Key="FormCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardGradientBrush}" />
            <Setter Property="CornerRadius" Value="20" />
            <Setter Property="Padding" Value="32" />
            <Setter Property="BorderBrush" Value="{StaticResource OutlineBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#20000000" BlurRadius="16" ShadowDepth="8" Opacity="0.12"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Input Field Style -->
        <Style x:Key="InputFieldStyle" TargetType="Border">
            <Setter Property="Background" Value="White" />
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="BorderBrush" Value="{StaticResource OutlineBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Style.Triggers>
                <Trigger Property="IsKeyboardFocusWithin" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource AccentLightBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Ingredient/Step Item Style -->
        <Style x:Key="ItemCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource SurfaceVariantBrush}" />
            <Setter Property="CornerRadius" Value="16" />
            <Setter Property="Padding" Value="20" />
            <Setter Property="Margin" Value="0,8" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#10000000" BlurRadius="8" ShadowDepth="2" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#20000000" BlurRadius="12" ShadowDepth="4" Opacity="0.15"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Add Button Style -->
        <Style x:Key="AddButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                               CornerRadius="8"
                               Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource SurfaceVariantBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Remove Button Style -->
        <Style x:Key="RemoveButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                               CornerRadius="16"
                               Width="{TemplateBinding Width}"
                               Height="{TemplateBinding Height}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource ErrorBrush}"/>
                                <Setter Property="TextBlock.Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Dashed Border Style for Upload Area -->
        <Style x:Key="DashedBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource SurfaceVariantBrush}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <DrawingBrush Viewport="0,0,8,8" ViewportUnits="Absolute" TileMode="Tile">
                        <DrawingBrush.Drawing>
                            <GeometryDrawing Brush="{StaticResource OutlineBrush}">
                                <GeometryDrawing.Geometry>
                                    <RectangleGeometry Rect="0,0,50,50"/>
                                </GeometryDrawing.Geometry>
                            </GeometryDrawing>
                        </DrawingBrush.Drawing>
                    </DrawingBrush>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="32">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Enhanced Header -->
            <Border Grid.Row="0" Style="{StaticResource FormCardStyle}" Margin="0,0,0,32">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <TextBlock Text="👨‍🍳" FontSize="32" Margin="0,0,16,0" VerticalAlignment="Center"/>
                            <StackPanel>
                                <TextBlock Text="Create New Recipe" 
                                           FontSize="28"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                                <TextBlock Text="Share your culinary masterpiece with the world" 
                                           FontSize="16"
                                           Foreground="{StaticResource TextSecondaryBrush}"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Progress Indicators -->
                        <StackPanel Orientation="Horizontal">
                            <Border Background="{StaticResource SuccessBrush}"
                                   CornerRadius="12"
                                   Padding="12,6"
                                   Margin="0,0,12,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="✓" FontSize="14" Margin="0,0,6,0"/>
                                    <TextBlock Text="Step 1: Basic Info" 
                                              FontSize="12"
                                              FontWeight="SemiBold"
                                              Foreground="White"/>
                                </StackPanel>
                            </Border>

                            <Border Background="{StaticResource InfoBrush}"
                                   CornerRadius="12"
                                   Padding="12,6">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="📝" FontSize="14" Margin="0,0,6,0"/>
                                    <TextBlock Text="Step 2: Details" 
                                              FontSize="12"
                                              FontWeight="SemiBold"
                                              Foreground="White"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </StackPanel>

                    <!-- Action Buttons -->
                    <Button Grid.Column="1"
                            Content="❌ Cancel"
                            Command="{Binding CancelCommand}"
                            Margin="0,0,16,0"
                            VerticalAlignment="Center"
                            Padding="20,12"
                            FontSize="14">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                                <Setter Property="BorderBrush" Value="{StaticResource OutlineBrush}"/>
                                <Setter Property="BorderThickness" Value="1"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="12"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="{StaticResource ErrorBrush}"/>
                                                    <Setter Property="Foreground" Value="White"/>
                                                    <Setter Property="BorderBrush" Value="{StaticResource ErrorBrush}"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Grid.Column="2"
                            Content="💾 Save Recipe"
                            Command="{Binding SaveRecipeCommand}"
                            Style="{StaticResource PrimaryButtonStyle}"
                            VerticalAlignment="Center"
                            Padding="20,12"
                            FontSize="14"
                            IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}"/>
                </Grid>
            </Border>

            <!-- Enhanced Form Content -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="32"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Main Form -->
                <StackPanel Grid.Column="0">
                    <!-- Enhanced Basic Info -->
                    <Border Style="{StaticResource FormCardStyle}" Margin="0,0,0,24">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                                <TextBlock Text="📝" FontSize="20" Margin="0,0,12,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Basic Information" 
                                           FontSize="20"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                            </StackPanel>

                            <!-- Title Field -->
                            <StackPanel Margin="0,0,0,20">
                                <TextBlock Text="Recipe Title *" 
                                           FontWeight="SemiBold"
                                           FontSize="14"
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           Margin="0,0,0,8"/>
                                <Border Style="{StaticResource InputFieldStyle}">
                                    <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}"
                                             Padding="16,12"
                                             FontSize="16"
                                             BorderThickness="0"
                                             Background="Transparent"/>
                                </Border>
                            </StackPanel>

                            <!-- Description Field -->
                            <StackPanel Margin="0,0,0,20">
                                <TextBlock Text="Description *" 
                                           FontWeight="SemiBold"
                                           FontSize="14"
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           Margin="0,0,0,8"/>
                                <Border Style="{StaticResource InputFieldStyle}">
                                    <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                                             AcceptsReturn="True"
                                             TextWrapping="Wrap"
                                             Height="100"
                                             VerticalScrollBarVisibility="Auto"
                                             Padding="16,12"
                                             FontSize="14"
                                             BorderThickness="0"
                                             Background="Transparent"/>
                                </Border>
                            </StackPanel>

                            <!-- Category and Time Fields -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Category -->
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Category *" 
                                               FontWeight="SemiBold"
                                               FontSize="14"
                                               Foreground="{StaticResource TextPrimaryBrush}"
                                               Margin="0,0,0,8"/>
                                    <Border Style="{StaticResource InputFieldStyle}">
                                        <ComboBox ItemsSource="{Binding Categories}"
                                                  SelectedItem="{Binding SelectedCategory}"
                                                  Padding="16,12"
                                                  FontSize="14"
                                                  BorderThickness="0"
                                                  Background="Transparent"/>
                                    </Border>
                                </StackPanel>

                                <!-- Prep Time -->
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Prep Time (min) *" 
                                               FontWeight="SemiBold"
                                               FontSize="14"
                                               Foreground="{StaticResource TextPrimaryBrush}"
                                               Margin="0,0,0,8"/>
                                    <Border Style="{StaticResource InputFieldStyle}">
                                        <TextBox Text="{Binding PrepTime, UpdateSourceTrigger=PropertyChanged}"
                                                 Padding="16,12"
                                                 FontSize="14"
                                                 BorderThickness="0"
                                                 Background="Transparent"/>
                                    </Border>
                                </StackPanel>

                                <!-- Cook Time -->
                                <StackPanel Grid.Column="4">
                                    <TextBlock Text="Cook Time (min) *" 
                                               FontWeight="SemiBold"
                                               FontSize="14"
                                               Foreground="{StaticResource TextPrimaryBrush}"
                                               Margin="0,0,0,8"/>
                                    <Border Style="{StaticResource InputFieldStyle}">
                                        <TextBox Text="{Binding CookTime, UpdateSourceTrigger=PropertyChanged}"
                                                 Padding="16,12"
                                                 FontSize="14"
                                                 BorderThickness="0"
                                                 Background="Transparent"/>
                                    </Border>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Enhanced Ingredients Section -->
                    <Border Style="{StaticResource FormCardStyle}" Margin="0,0,0,24">
                        <StackPanel>
                            <Grid Margin="0,0,0,20">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🥘" FontSize="20" Margin="0,0,12,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="Ingredients" 
                                               FontSize="20"
                                               FontWeight="Bold"
                                               Foreground="{StaticResource TextPrimaryBrush}"
                                               VerticalAlignment="Center"/>
                                </StackPanel>

                                <Button Content="➕ Add Ingredient"
                                        Command="{Binding AddIngredientCommand}"
                                        Style="{StaticResource AddButtonStyle}"
                                        HorizontalAlignment="Right"
                                        Padding="16,8"/>
                            </Grid>

                            <ItemsControl ItemsSource="{Binding Ingredients}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource ItemCardStyle}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="16"/>
                                                    <ColumnDefinition Width="200"/>
                                                    <ColumnDefinition Width="16"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Ingredient Name -->
                                                <Border Grid.Column="0" Style="{StaticResource InputFieldStyle}">
                                                    <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                                                             Padding="12,8"
                                                             FontSize="14"
                                                             BorderThickness="0"
                                                             Background="Transparent">
                                                        <TextBox.Style>
                                                            <Style TargetType="TextBox">
                                                                <Style.Triggers>
                                                                    <Trigger Property="Text" Value="">
                                                                        <Setter Property="Background">
                                                                            <Setter.Value>
                                                                                <VisualBrush AlignmentX="Left" AlignmentY="Center" Stretch="None">
                                                                                    <VisualBrush.Visual>
                                                                                        <Label Content="Ingredient name..." 
                                                                                               Foreground="{StaticResource TextSecondaryBrush}"
                                                                                               FontSize="14"/>
                                                                                    </VisualBrush.Visual>
                                                                                </VisualBrush>
                                                                            </Setter.Value>
                                                                        </Setter>
                                                                    </Trigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBox.Style>
                                                    </TextBox>
                                                </Border>

                                                <!-- Quantity -->
                                                <Border Grid.Column="2" Style="{StaticResource InputFieldStyle}">
                                                    <TextBox Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}"
                                                             Padding="12,8"
                                                             FontSize="14"
                                                             BorderThickness="0"
                                                             Background="Transparent">
                                                        <TextBox.Style>
                                                            <Style TargetType="TextBox">
                                                                <Style.Triggers>
                                                                    <Trigger Property="Text" Value="">
                                                                        <Setter Property="Background">
                                                                            <Setter.Value>
                                                                                <VisualBrush AlignmentX="Left" AlignmentY="Center" Stretch="None">
                                                                                    <VisualBrush.Visual>
                                                                                        <Label Content="Quantity..." 
                                                                                               Foreground="{StaticResource TextSecondaryBrush}"
                                                                                               FontSize="14"/>
                                                                                    </VisualBrush.Visual>
                                                                                </VisualBrush>
                                                                            </Setter.Value>
                                                                        </Setter>
                                                                    </Trigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBox.Style>
                                                    </TextBox>
                                                </Border>

                                                <!-- Remove Button -->
                                                <Button Grid.Column="4"
                                                        Content="🗑️"
                                                        Command="{Binding DataContext.RemoveIngredientCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}"
                                                        Style="{StaticResource RemoveButtonStyle}"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Empty State for Ingredients -->
                            <Border Background="{StaticResource SurfaceVariantBrush}"
                                   CornerRadius="12"
                                   Padding="32,24"
                                   Margin="0,16,0,0"
                                   Visibility="{Binding Ingredients.Count, Converter={StaticResource CountToVisibilityConverter}}">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="🥕" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,12"/>
                                    <TextBlock Text="No ingredients added yet" 
                                              FontSize="16"
                                              Foreground="{StaticResource TextSecondaryBrush}"
                                              HorizontalAlignment="Center"
                                              Margin="0,0,0,8"/>
                                    <TextBlock Text="Click 'Add Ingredient' to get started" 
                                              FontSize="14"
                                              Foreground="{StaticResource TextSecondaryBrush}"
                                              HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- Enhanced Instructions Section -->
                    <Border Style="{StaticResource FormCardStyle}">
                        <StackPanel>
                            <Grid Margin="0,0,0,20">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="📋" FontSize="20" Margin="0,0,12,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="Cooking Instructions" 
                                               FontSize="20"
                                               FontWeight="Bold"
                                               Foreground="{StaticResource TextPrimaryBrush}"
                                               VerticalAlignment="Center"/>
                                </StackPanel>

                                <Button Content="➕ Add Step"
                                        Command="{Binding AddStepCommand}"
                                        Style="{StaticResource AddButtonStyle}"
                                        HorizontalAlignment="Right"
                                        Padding="16,8"/>
                            </Grid>

                            <ItemsControl ItemsSource="{Binding Steps}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource ItemCardStyle}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="20"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="16"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Step Number -->
                                                <Border Grid.Column="0"
                                                        Background="{StaticResource PrimaryGradientBrush}"
                                                        Width="40" Height="40"
                                                        CornerRadius="20">
                                                    <TextBlock Text="{Binding StepNumber}"
                                                               FontSize="16"
                                                               FontWeight="Bold"
                                                               Foreground="White"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"/>
                                                </Border>

                                                <!-- Step Description -->
                                                <Border Grid.Column="2" Style="{StaticResource InputFieldStyle}">
                                                    <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                                                             AcceptsReturn="True"
                                                             TextWrapping="Wrap"
                                                             MinHeight="80"
                                                             VerticalScrollBarVisibility="Auto"
                                                             Padding="12,8"
                                                             FontSize="14"
                                                             BorderThickness="0"
                                                             Background="Transparent">
                                                        <TextBox.Style>
                                                            <Style TargetType="TextBox">
                                                                <Style.Triggers>
                                                                    <Trigger Property="Text" Value="">
                                                                        <Setter Property="Background">
                                                                            <Setter.Value>
                                                                                <VisualBrush AlignmentX="Left" AlignmentY="Top" Stretch="None">
                                                                                    <VisualBrush.Visual>
                                                                                        <Label Content="Describe this cooking step..." 
                                                                                               Foreground="{StaticResource TextSecondaryBrush}"
                                                                                               FontSize="14"/>
                                                                                    </VisualBrush.Visual>
                                                                                </VisualBrush>
                                                                            </Setter.Value>
                                                                        </Setter>
                                                                    </Trigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBox.Style>
                                                    </TextBox>
                                                </Border>

                                                <!-- Remove Button -->
                                                <Button Grid.Column="4"
                                                        Content="🗑️"
                                                        Command="{Binding DataContext.RemoveStepCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}"
                                                        Style="{StaticResource RemoveButtonStyle}"
                                                        VerticalAlignment="Top"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Empty State for Steps -->
                            <Border Background="{StaticResource SurfaceVariantBrush}"
                                   CornerRadius="12"
                                   Padding="32,24"
                                   Margin="0,16,0,0"
                                   Visibility="{Binding Steps.Count, Converter={StaticResource CountToVisibilityConverter}}">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="📝" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,12"/>
                                    <TextBlock Text="No cooking steps added yet" 
                                              FontSize="16"
                                              Foreground="{StaticResource TextSecondaryBrush}"
                                              HorizontalAlignment="Center"
                                              Margin="0,0,0,8"/>
                                    <TextBlock Text="Click 'Add Step' to start building your recipe" 
                                              FontSize="14"
                                              Foreground="{StaticResource TextSecondaryBrush}"
                                              HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Enhanced Sidebar -->
                <StackPanel Grid.Column="2">
                    <!-- Enhanced Image Upload -->
                    <Border Style="{StaticResource FormCardStyle}" Margin="0,0,0,24">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                <TextBlock Text="📸" FontSize="18" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Recipe Image" 
                                           FontSize="18"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                            </StackPanel>

                            <!-- Fixed: Removed BorderStyle and used proper dashed border approach -->
                            <Border Height="200" Style="{StaticResource DashedBorderStyle}">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Border Background="{StaticResource PrimaryBrush}"
                                           Width="64" Height="64"
                                           CornerRadius="32"
                                           Margin="0,0,0,16">
                                        <TextBlock Text="📷" 
                                                  FontSize="32"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  Foreground="White"/>
                                    </Border>

                                    <TextBlock Text="Upload Recipe Photo" 
                                              FontSize="16"
                                              FontWeight="SemiBold"
                                              Foreground="{StaticResource TextPrimaryBrush}"
                                              HorizontalAlignment="Center"
                                              Margin="0,0,0,8"/>

                                    <TextBlock Text="JPG, PNG up to 10MB" 
                                              FontSize="12"
                                              Foreground="{StaticResource TextSecondaryBrush}"
                                              HorizontalAlignment="Center"
                                              Margin="0,0,0,16"/>

                                    <Button Content="🖼️ Select Image"
                                            Command="{Binding SelectImageCommand}"
                                            Style="{StaticResource SecondaryButtonStyle}"
                                            Padding="16,8"/>
                                </StackPanel>
                            </Border>

                            <TextBlock Text="{Binding SelectedImagePath, Converter={StaticResource FilePathToNameConverter}}"
                                       FontSize="12"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       Margin="0,12,0,0"
                                       TextTrimming="CharacterEllipsis"
                                       HorizontalAlignment="Center"
                                       Visibility="{Binding SelectedImagePath, Converter={StaticResource StringToVisibilityConverter}}"/>
                        </StackPanel>
                    </Border>

                    <!-- Recipe Tips -->
                    <Border Style="{StaticResource FormCardStyle}" Margin="0,0,0,24">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                <TextBlock Text="💡" FontSize="18" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Recipe Tips" 
                                           FontSize="18"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                            </StackPanel>

                            <StackPanel>
                                <Border Background="{StaticResource InfoBrush}"
                                       CornerRadius="12"
                                       Padding="16,12"
                                       Margin="0,0,0,12">
                                    <StackPanel>
                                        <TextBlock Text="✨ Pro Tip" 
                                                  FontSize="14"
                                                  FontWeight="SemiBold"
                                                  Foreground="White"
                                                  Margin="0,0,0,4"/>
                                        <TextBlock Text="Use clear, specific measurements and cooking times for best results." 
                                                  FontSize="12"
                                                  Foreground="White"
                                                  TextWrapping="Wrap"/>
                                    </StackPanel>
                                </Border>

                                <Border Background="{StaticResource SuccessBrush}"
                                       CornerRadius="12"
                                       Padding="16,12">
                                    <StackPanel>
                                        <TextBlock Text="🎯 Best Practice" 
                                                  FontSize="14"
                                                  FontWeight="SemiBold"
                                                  Foreground="White"
                                                  Margin="0,0,0,4"/>
                                        <TextBlock Text="Include prep work in your instructions to help others succeed." 
                                                  FontSize="12"
                                                  Foreground="White"
                                                  TextWrapping="Wrap"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Error Message -->
                    <Border Background="#FFF3E0"
                           BorderBrush="{StaticResource ErrorBrush}"
                           BorderThickness="1"
                           CornerRadius="12"
                           Padding="16,12"
                           Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="⚠️" FontSize="16" Margin="0,0,8,0"/>
                                <TextBlock Text="Validation Error" 
                                          FontWeight="SemiBold"
                                          FontSize="14"
                                          Foreground="#D32F2F"/>
                            </StackPanel>
                            <TextBlock Text="{Binding ErrorMessage}"
                                      FontSize="13"
                                      Foreground="#D32F2F"
                                      TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>

            <!-- Enhanced Loading Overlay -->
            <Grid Grid.Row="0" Grid.RowSpan="2"
                  Background="#90000000"
                  Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                <Border Background="{StaticResource SurfaceBrush}"
                       CornerRadius="20"
                       Padding="40,32"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center">
                    <StackPanel HorizontalAlignment="Center">
                        <Border Width="64" Height="64"
                               Background="{StaticResource PrimaryGradientBrush}"
                               CornerRadius="32"
                               Margin="0,0,0,20">
                            <TextBlock Text="👨‍🍳" 
                                      FontSize="32"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>

                        <ProgressBar Width="200" Height="6" 
                                    IsIndeterminate="True"
                                    Background="{StaticResource OutlineVariantBrush}"
                                    Foreground="{StaticResource PrimaryBrush}"
                                    Margin="0,0,0,16"/>

                        <TextBlock Text="Creating your delicious recipe..." 
                                  HorizontalAlignment="Center"
                                  FontSize="16"
                                  FontWeight="SemiBold"
                                  Foreground="{StaticResource TextPrimaryBrush}"
                                  Margin="0,0,0,4"/>

                        <TextBlock Text="This won't take long!" 
                                  HorizontalAlignment="Center"
                                  FontSize="14"
                                  Foreground="{StaticResource TextSecondaryBrush}"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>