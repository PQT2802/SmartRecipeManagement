<UserControl x:Class="SmartRecipe.Wpf.Views.RecipeDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Background="{StaticResource BackgroundBrush}">

    <UserControl.Resources>
        <!-- Recipe Detail Card Style -->
        <Style x:Key="DetailCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}" />
            <Setter Property="CornerRadius" Value="16" />
            <Setter Property="Padding" Value="24" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#20000000" BlurRadius="16" ShadowDepth="8" Opacity="0.12"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Comment Card Style -->
        <Style x:Key="CommentCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource SurfaceVariantBrush}" />
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="Padding" Value="16" />
            <Setter Property="Margin" Value="0,8" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#10000000" BlurRadius="8" ShadowDepth="2" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Back Button Style -->
        <Style x:Key="BackButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource SurfaceVariantBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="48"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                               CornerRadius="24">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                <Setter Property="TextBlock.Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Comment TextBox Style -->
        <Style x:Key="CommentTextBoxStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="BorderBrush" Value="{StaticResource OutlineBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Style.Triggers>
                <Trigger Property="IsKeyboardFocusWithin" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header with Back Button -->
            <Grid Grid.Row="0" Margin="0,0,0,24">
                <Button HorizontalAlignment="Left"
                       Command="{Binding BackCommand}"
                       Style="{StaticResource BackButtonStyle}">
                    <TextBlock Text="←" FontSize="24" FontWeight="Bold"/>
                </Button>

                <TextBlock Text="Recipe Details"
                          FontSize="24"
                          FontWeight="Bold"
                          Foreground="{StaticResource TextPrimaryBrush}"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"/>
            </Grid>

            <!-- Recipe Hero Section -->
            <Border Grid.Row="1" Style="{StaticResource DetailCardStyle}" Margin="0,0,0,24">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="300"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Recipe Image -->
                    <Border Grid.Row="0" 
                           Background="{StaticResource PrimaryGradientBrush}"
                           CornerRadius="12"
                           Margin="0,0,0,20">
                        <Grid>
                            <TextBlock Text="🍽️" 
                                      FontSize="80"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      Foreground="White"/>

                            <!-- Recipe Category Badge -->
                            <Border Background="#60000000"
                                   CornerRadius="12"
                                   Padding="12,8"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   Margin="16">
                                <TextBlock Text="{Binding RecipeCategory}" 
                                          FontSize="14"
                                          FontWeight="SemiBold"
                                          Foreground="White"/>
                            </Border>

                            <!-- Like Button -->
                            <Button HorizontalAlignment="Right"
                                   VerticalAlignment="Top"
                                   Margin="16"
                                   Command="{Binding ToggleLikeCommand}"
                                   Visibility="{Binding HasRecipeData, Converter={StaticResource BoolToVisibilityConverter}}">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="#60000000"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="Width" Value="56"/>
                                        <Setter Property="Height" Value="56"/>
                                        <Setter Property="Cursor" Value="Hand"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" 
                                                           CornerRadius="28">
                                                        <ContentPresenter HorizontalAlignment="Center" 
                                                                        VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#80000000"/>
                                                            <Setter Property="RenderTransform">
                                                                <Setter.Value>
                                                                    <ScaleTransform ScaleX="1.1" ScaleY="1.1"/>
                                                                </Setter.Value>
                                                            </Setter>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                                <TextBlock FontSize="24">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="🤍"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsLiked}" Value="True">
                                                    <Setter Property="Text" Value="❤️"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Recipe Info -->
                    <StackPanel Grid.Row="1">
                        <!-- Title and Description -->
                        <TextBlock Text="{Binding RecipeTitle}" 
                                  FontSize="32"
                                  FontWeight="Bold"
                                  Foreground="{StaticResource TextPrimaryBrush}"
                                  Margin="0,0,0,12"/>

                        <TextBlock Text="{Binding RecipeDescription}" 
                                  FontSize="16"
                                  Foreground="{StaticResource TextSecondaryBrush}"
                                  TextWrapping="Wrap"
                                  LineHeight="24"
                                  Margin="0,0,0,20"/>

                        <!-- Recipe Stats -->
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Prep Time -->
                            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                <Border Background="{StaticResource InfoBrush}"
                                       Width="48" Height="48"
                                       CornerRadius="24"
                                       Margin="0,0,0,8">
                                    <TextBlock Text="⏱️" 
                                              FontSize="20"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="{Binding PrepTime}" 
                                          FontSize="18"
                                          FontWeight="Bold"
                                          Foreground="{StaticResource TextPrimaryBrush}"
                                          HorizontalAlignment="Center"/>
                                <TextBlock Text="Prep Time (min)" 
                                          FontSize="12"
                                          Foreground="{StaticResource TextSecondaryBrush}"
                                          HorizontalAlignment="Center"/>
                            </StackPanel>

                            <!-- Cook Time -->
                            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                <Border Background="{StaticResource WarningBrush}"
                                       Width="48" Height="48"
                                       CornerRadius="24"
                                       Margin="0,0,0,8">
                                    <TextBlock Text="🔥" 
                                              FontSize="20"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="{Binding CookTime}" 
                                          FontSize="18"
                                          FontWeight="Bold"
                                          Foreground="{StaticResource TextPrimaryBrush}"
                                          HorizontalAlignment="Center"/>
                                <TextBlock Text="Cook Time (min)" 
                                          FontSize="12"
                                          Foreground="{StaticResource TextSecondaryBrush}"
                                          HorizontalAlignment="Center"/>
                            </StackPanel>

                            <!-- Servings -->
                            <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                <Border Background="{StaticResource SuccessBrush}"
                                       Width="48" Height="48"
                                       CornerRadius="24"
                                       Margin="0,0,0,8">
                                    <TextBlock Text="👥" 
                                              FontSize="20"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="{Binding Servings}" 
                                          FontSize="18"
                                          FontWeight="Bold"
                                          Foreground="{StaticResource TextPrimaryBrush}"
                                          HorizontalAlignment="Center"/>
                                <TextBlock Text="Servings" 
                                          FontSize="12"
                                          Foreground="{StaticResource TextSecondaryBrush}"
                                          HorizontalAlignment="Center"/>
                            </StackPanel>

                            <!-- Likes -->
                            <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                                <Border Background="{StaticResource ErrorBrush}"
                                       Width="48" Height="48"
                                       CornerRadius="24"
                                       Margin="0,0,0,8">
                                    <TextBlock Text="❤️" 
                                              FontSize="20"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="{Binding LikesCount}" 
                                          FontSize="18"
                                          FontWeight="Bold"
                                          Foreground="{StaticResource TextPrimaryBrush}"
                                          HorizontalAlignment="Center"/>
                                <TextBlock Text="Likes" 
                                          FontSize="12"
                                          Foreground="{StaticResource TextSecondaryBrush}"
                                          HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Grid>

                        <!-- Author Info -->
                        <Border Background="{StaticResource SurfaceVariantBrush}"
                               CornerRadius="12"
                               Padding="16"
                               Visibility="{Binding HasRecipeData, Converter={StaticResource BoolToVisibilityConverter}}">
                            <StackPanel Orientation="Horizontal">
                                <Border Background="{StaticResource PrimaryBrush}"
                                       Width="40" Height="40"
                                       CornerRadius="20"
                                       Margin="0,0,12,0">
                                    <TextBlock Text="👨‍🍳" 
                                              FontSize="18"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                </Border>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="{Binding AuthorName}" 
                                              FontSize="16"
                                              FontWeight="SemiBold"
                                              Foreground="{StaticResource TextPrimaryBrush}"/>
                                    <TextBlock Text="{Binding CreatedDate, StringFormat='Created on {0}'}" 
                                              FontSize="12"
                                              Foreground="{StaticResource TextSecondaryBrush}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Recipe Content -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="24"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Column: Ingredients and Instructions -->
                <StackPanel Grid.Column="0">
                    <!-- Ingredients -->
                    <Border Style="{StaticResource DetailCardStyle}" Margin="0,0,0,24">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                                <TextBlock Text="🥘" FontSize="24" Margin="0,0,12,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Ingredients" 
                                          FontSize="20"
                                          FontWeight="Bold"
                                          Foreground="{StaticResource TextPrimaryBrush}"/>
                            </StackPanel>

                            <!-- Show ingredients if available -->
                            <ItemsControl ItemsSource="{Binding RecipeIngredients}"
                                         Visibility="{Binding HasRecipeData, Converter={StaticResource BoolToVisibilityConverter}}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{StaticResource SurfaceVariantBrush}"
                                               CornerRadius="8"
                                               Padding="16,12"
                                               Margin="0,4">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <Border Grid.Column="0"
                                                       Background="{StaticResource PrimaryBrush}"
                                                       Width="24" Height="24"
                                                       CornerRadius="12"
                                                       Margin="0,0,12,0">
                                                    <TextBlock Text="✓" 
                                                              FontSize="12"
                                                              FontWeight="Bold"
                                                              Foreground="White"
                                                              HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                                </Border>

                                                <TextBlock Grid.Column="1"
                                                          Text="{Binding Name}" 
                                                          FontSize="14"
                                                          FontWeight="Medium"
                                                          Foreground="{StaticResource TextPrimaryBrush}"
                                                          VerticalAlignment="Center"/>

                                                <TextBlock Grid.Column="2"
                                                          Text="{Binding Quantity}" 
                                                          FontSize="14"
                                                          FontWeight="SemiBold"
                                                          Foreground="{StaticResource AccentBrush}"
                                                          VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Show "not have" message when no ingredients -->
                            <Border Background="{StaticResource SurfaceVariantBrush}"
                                   CornerRadius="8"
                                   Padding="16,12"
                                   Margin="0,4"
                                   Visibility="{Binding HasRecipeData, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                                <TextBlock Text="No ingredients available" 
                                          FontSize="14"
                                          FontStyle="Italic"
                                          Foreground="{StaticResource TextSecondaryBrush}"
                                          HorizontalAlignment="Center"/>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- Instructions -->
                    <Border Style="{StaticResource DetailCardStyle}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                                <TextBlock Text="📋" FontSize="24" Margin="0,0,12,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Instructions" 
                                          FontSize="20"
                                          FontWeight="Bold"
                                          Foreground="{StaticResource TextPrimaryBrush}"/>
                            </StackPanel>

                            <!-- Show instructions if available -->
                            <ItemsControl ItemsSource="{Binding RecipeSteps}"
                                         Visibility="{Binding HasRecipeData, Converter={StaticResource BoolToVisibilityConverter}}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{StaticResource SurfaceVariantBrush}"
                                               CornerRadius="12"
                                               Padding="20"
                                               Margin="0,8">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="20"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <Border Grid.Column="0"
                                                       Background="{StaticResource PrimaryGradientBrush}"
                                                       Width="40" Height="40"
                                                       CornerRadius="20">
                                                    <TextBlock Text="{Binding Order}"
                                                              FontSize="16"
                                                              FontWeight="Bold"
                                                              Foreground="White"
                                                              HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                                </Border>

                                                <TextBlock Grid.Column="2"
                                                          Text="{Binding Description}" 
                                                          FontSize="14"
                                                          Foreground="{StaticResource TextPrimaryBrush}"
                                                          TextWrapping="Wrap"
                                                          LineHeight="20"
                                                          VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Show "not have" message when no instructions -->
                            <Border Background="{StaticResource SurfaceVariantBrush}"
                                   CornerRadius="12"
                                   Padding="20"
                                   Margin="0,8"
                                   Visibility="{Binding HasRecipeData, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                                <TextBlock Text="No instructions available" 
                                          FontSize="14"
                                          FontStyle="Italic"
                                          Foreground="{StaticResource TextSecondaryBrush}"
                                          HorizontalAlignment="Center"/>
                            </Border>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Right Column: Nutrition & Comments -->
                <StackPanel Grid.Column="2">
                    <!-- Nutrition Info -->
                    <Border Style="{StaticResource DetailCardStyle}" 
                           Margin="0,0,0,24"
                           Visibility="{Binding Recipe.NutritionInfo, Converter={StaticResource NullToVisibilityConverter}}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                <TextBlock Text="📊" FontSize="20" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Nutrition Facts" 
                                          FontSize="18"
                                          FontWeight="Bold"
                                          Foreground="{StaticResource TextPrimaryBrush}"/>
                            </StackPanel>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Calories -->
                                <Border Grid.Row="0" 
                                       Background="{StaticResource SurfaceVariantBrush}"
                                       CornerRadius="8"
                                       Padding="12"
                                       Margin="0,4">
                                    <Grid>
                                        <TextBlock Text="Calories" 
                                                  FontSize="14"
                                                  Foreground="{StaticResource TextSecondaryBrush}"
                                                  HorizontalAlignment="Left"/>
                                        <TextBlock Text="{Binding Recipe.NutritionInfo.Calories, StringFormat='{}{0:F0} cal'}" 
                                                  FontSize="14"
                                                  FontWeight="SemiBold"
                                                  Foreground="{StaticResource TextPrimaryBrush}"
                                                  HorizontalAlignment="Right"/>
                                    </Grid>
                                </Border>

                                <!-- Protein -->
                                <Border Grid.Row="1" 
                                       Background="{StaticResource SurfaceVariantBrush}"
                                       CornerRadius="8"
                                       Padding="12"
                                       Margin="0,4">
                                    <Grid>
                                        <TextBlock Text="Protein" 
                                                  FontSize="14"
                                                  Foreground="{StaticResource TextSecondaryBrush}"
                                                  HorizontalAlignment="Left"/>
                                        <TextBlock Text="{Binding Recipe.NutritionInfo.Protein, StringFormat='{}{0:F1}g'}" 
                                                  FontSize="14"
                                                  FontWeight="SemiBold"
                                                  Foreground="{StaticResource TextPrimaryBrush}"
                                                  HorizontalAlignment="Right"/>
                                    </Grid>
                                </Border>

                                <!-- Fat -->
                                <Border Grid.Row="2" 
                                       Background="{StaticResource SurfaceVariantBrush}"
                                       CornerRadius="8"
                                       Padding="12"
                                       Margin="0,4">
                                    <Grid>
                                        <TextBlock Text="Fat" 
                                                  FontSize="14"
                                                  Foreground="{StaticResource TextSecondaryBrush}"
                                                  HorizontalAlignment="Left"/>
                                        <TextBlock Text="{Binding Recipe.NutritionInfo.Fat, StringFormat='{}{0:F1}g'}" 
                                                  FontSize="14"
                                                  FontWeight="SemiBold"
                                                  Foreground="{StaticResource TextPrimaryBrush}"
                                                  HorizontalAlignment="Right"/>
                                    </Grid>
                                </Border>

                                <!-- Carbs -->
                                <Border Grid.Row="3" 
                                       Background="{StaticResource SurfaceVariantBrush}"
                                       CornerRadius="8"
                                       Padding="12"
                                       Margin="0,4">
                                    <Grid>
                                        <TextBlock Text="Carbohydrates" 
                                                  FontSize="14"
                                                  Foreground="{StaticResource TextSecondaryBrush}"
                                                  HorizontalAlignment="Left"/>
                                        <TextBlock Text="{Binding Recipe.NutritionInfo.Carbs, StringFormat='{}{0:F1}g'}" 
                                                  FontSize="14"
                                                  FontWeight="SemiBold"
                                                  Foreground="{StaticResource TextPrimaryBrush}"
                                                  HorizontalAlignment="Right"/>
                                    </Grid>
                                </Border>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Comments Section -->
                    <Border Style="{StaticResource DetailCardStyle}"
                           Visibility="{Binding HasRecipeData, Converter={StaticResource BoolToVisibilityConverter}}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                                <TextBlock Text="💬" FontSize="20" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Comments.Count, StringFormat='Comments ({0})'}" 
                                          FontSize="18"
                                          FontWeight="Bold"
                                          Foreground="{StaticResource TextPrimaryBrush}"/>
                            </StackPanel>

                            <!-- Add Comment Section -->
                            <Border Background="{StaticResource SurfaceVariantBrush}"
                                   CornerRadius="12"
                                   Padding="16"
                                   Margin="0,0,0,16">
                                <StackPanel>
                                    <!-- Fixed: Wrapped TextBox in Border with CornerRadius -->
                                    <Border Style="{StaticResource CommentTextBoxStyle}">
                                        <TextBox x:Name="NewCommentTextBox"
                                                AcceptsReturn="True"
                                                TextWrapping="Wrap"
                                                MaxHeight="120"
                                                VerticalScrollBarVisibility="Auto"
                                                Padding="12"
                                                FontSize="14"
                                                BorderThickness="0"
                                                Background="Transparent">
                                            <TextBox.Style>
                                                <Style TargetType="TextBox">
                                                    <Style.Triggers>
                                                        <Trigger Property="Text" Value="">
                                                            <Setter Property="Background">
                                                                <Setter.Value>
                                                                    <VisualBrush AlignmentX="Left" AlignmentY="Top" Stretch="None">
                                                                        <VisualBrush.Visual>
                                                                            <Label Content="Write a comment..." 
                                                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                                                   FontSize="14"/>
                                                                        </VisualBrush.Visual>
                                                                    </VisualBrush>
                                                                </Setter.Value>
                                                            </Setter>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBox.Style>
                                        </TextBox>
                                    </Border>

                                    <Button Content="💬 Post Comment"
                                           Style="{StaticResource PrimaryButtonStyle}"
                                           Padding="16,8"
                                           FontSize="14"
                                           HorizontalAlignment="Right"
                                           Margin="0,12,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- Comments List -->
                            <ScrollViewer MaxHeight="400" VerticalScrollBarVisibility="Auto">
                                <ItemsControl ItemsSource="{Binding Comments}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Style="{StaticResource CommentCardStyle}">
                                                <StackPanel>
                                                    <Grid Margin="0,0,0,8">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <Border Grid.Column="0"
                                                               Background="{StaticResource AccentBrush}"
                                                               Width="32" Height="32"
                                                               CornerRadius="16"
                                                               Margin="0,0,12,0">
                                                            <TextBlock Text="👤" 
                                                                      FontSize="16"
                                                                      HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center"/>
                                                        </Border>

                                                        <StackPanel Grid.Column="1">
                                                            <TextBlock Text="{Binding User.UserName}" 
                                                                      FontSize="14"
                                                                      FontWeight="SemiBold"
                                                                      Foreground="{StaticResource TextPrimaryBrush}"/>
                                                            <TextBlock Text="{Binding CreatedAt, StringFormat='{}{0:MMM dd, yyyy - HH:mm}'}" 
                                                                      FontSize="12"
                                                                      Foreground="{StaticResource TextSecondaryBrush}"/>
                                                        </StackPanel>
                                                    </Grid>

                                                    <TextBlock Text="{Binding Content}" 
                                                              FontSize="14"
                                                              Foreground="{StaticResource TextPrimaryBrush}"
                                                              TextWrapping="Wrap"
                                                              LineHeight="18"/>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>

                            <!-- Empty Comments State -->
                            <Border Background="{StaticResource SurfaceVariantBrush}"
                                   CornerRadius="12"
                                   Padding="32,24"
                                   Visibility="{Binding Comments.Count, Converter={StaticResource CountToVisibilityConverter}}">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="💭" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,12"/>
                                    <TextBlock Text="No comments yet" 
                                              FontSize="16"
                                              Foreground="{StaticResource TextSecondaryBrush}"
                                              HorizontalAlignment="Center"
                                              Margin="0,0,0,8"/>
                                    <TextBlock Text="Be the first to share your thoughts!" 
                                              FontSize="14"
                                              Foreground="{StaticResource TextSecondaryBrush}"
                                              HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>

            <!-- Loading Indicator -->
            <Grid Grid.Row="0" Grid.RowSpan="3"
                  Background="#80000000"
                  Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                <Border Background="{StaticResource SurfaceBrush}"
                       CornerRadius="16"
                       Padding="32,24"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center">
                    <StackPanel HorizontalAlignment="Center">
                        <Border Width="48" Height="48"
                               Background="{StaticResource PrimaryBrush}"
                               CornerRadius="24"
                               Margin="0,0,0,16">
                            <TextBlock Text="🍳" 
                                      FontSize="24"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      Foreground="White"/>
                        </Border>

                        <ProgressBar Width="120" Height="4" 
                                    IsIndeterminate="True"
                                    Background="{StaticResource OutlineVariantBrush}"
                                    Foreground="{StaticResource PrimaryBrush}"
                                    Margin="0,0,0,12"/>

                        <TextBlock Text="Loading recipe details..." 
                                  HorizontalAlignment="Center"
                                  FontSize="14"
                                  FontWeight="Medium"
                                  Foreground="{StaticResource TextSecondaryBrush}"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>