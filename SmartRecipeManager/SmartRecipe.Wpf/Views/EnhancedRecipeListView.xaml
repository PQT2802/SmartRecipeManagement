<UserControl x:Class="SmartRecipe.Wpf.Views.EnhancedRecipeListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:behaviors="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d"
             Background="{StaticResource BackgroundBrush}" Height="955" Width="1275"
             Loaded="UserControl_Loaded">

    <behaviors:Interaction.Triggers>
        <behaviors:EventTrigger EventName="Loaded">
            <behaviors:InvokeCommandAction Command="{Binding LoadDataCommand}"/>
        </behaviors:EventTrigger>
        <behaviors:EventTrigger EventName="IsVisibleChanged">
            <behaviors:InvokeCommandAction Command="{Binding LoadDataCommand}"/>
        </behaviors:EventTrigger>
    </behaviors:Interaction.Triggers>

    <UserControl.Resources>
        <!-- Enhanced Recipe Card Style -->
        <Style x:Key="EnhancedRecipeCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}" />
            <Setter Property="CornerRadius" Value="20" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#15000000" BlurRadius="16" ShadowDepth="6" Opacity="0.12"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#25000000" BlurRadius="24" ShadowDepth="12" Opacity="0.2"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <TranslateTransform Y="-8"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Spoonacular Badge Style -->
        <Style x:Key="SpoonacularBadgeStyle" TargetType="Border">
            <Setter Property="Background" Value="#FF6B35"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Margin" Value="12"/>
        </Style>

        <!-- Import Button Style -->
        <Style x:Key="ImportButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource SuccessBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                               CornerRadius="8"
                               Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource SecondaryDarkBrush}"/>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Detail Card Style -->
        <Style x:Key="DetailCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}" />
            <Setter Property="CornerRadius" Value="16" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#10000000" BlurRadius="12" ShadowDepth="4" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Clear Button Style -->
        <Style x:Key="ClearButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                               CornerRadius="4"
                               Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#20000000"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Enhanced Header -->
        <Border Grid.Row="0" Style="{StaticResource DetailCardStyle}" Margin="0,0,0,16" Padding="24">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <TextBlock Text="🌐" FontSize="32" Margin="0,0,16,0" VerticalAlignment="Center"/>
                        <StackPanel>
                            <TextBlock Text="Spoonacular Recipe Discovery"
                                      FontSize="28"
                                      FontWeight="Bold"
                                      Foreground="{StaticResource TextPrimaryBrush}"/>
                            <TextBlock Text="Explore amazing recipes from around the world"
                                      FontSize="16"
                                      Foreground="{StaticResource TextSecondaryBrush}"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Quick Stats -->
                    <StackPanel Orientation="Horizontal">
                        <Border Background="{StaticResource InfoBrush}"
                               CornerRadius="12"
                               Padding="12,6"
                               Margin="0,0,12,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🔍" FontSize="14" Margin="0,0,6,0"/>
                                <TextBlock Text="Smart Search"
                                          FontSize="12"
                                          FontWeight="SemiBold"
                                          Foreground="White"/>
                            </StackPanel>
                        </Border>

                        <Border Background="{StaticResource SuccessBrush}"
                               CornerRadius="12"
                               Padding="12,6"
                               Margin="0,0,12,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🗂️" FontSize="14" Margin="0,0,6,0"/>
                                <TextBlock Text="Category Filter"
                                          FontSize="12"
                                          FontWeight="SemiBold"
                                          Foreground="White"/>
                            </StackPanel>
                        </Border>

                        <Border Background="{StaticResource AccentBrush}"
                               CornerRadius="12"
                               Padding="12,6">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📥" FontSize="14" Margin="0,0,6,0"/>
                                <TextBlock Text="Import to Collection"
                                          FontSize="12"
                                          FontWeight="SemiBold"
                                          Foreground="White"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </StackPanel>

                <Button Grid.Column="1"
                       Content="➕ Create New Recipe"
                       Command="{Binding CreateRecipeCommand}"
                       Style="{StaticResource PrimaryButtonStyle}"
                       VerticalAlignment="Center"
                       Padding="20,16"
                       FontSize="16" Height="57"/>
            </Grid>
        </Border>

        <!-- Enhanced Search Section -->
        <Border Grid.Row="1" Style="{StaticResource DetailCardStyle}" Margin="0,0,0,16" Padding="24">
            <StackPanel>
                <!-- Search Box -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Enhanced Search Box -->
                    <Border Grid.Column="0"
                           BorderBrush="{StaticResource OutlineBrush}"
                           BorderThickness="1"
                           CornerRadius="16"
                           Background="White"
                           Margin="0,0,16,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                      Text="🔍"
                                      FontSize="18"
                                      Margin="20,0,12,0"
                                      VerticalAlignment="Center"
                                      Foreground="{StaticResource TextSecondaryBrush}"/>

                            <TextBox Grid.Column="1"
                                    Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged, Delay=500}"
                                    BorderThickness="0"
                                    Background="Transparent"
                                    Padding="0,16"
                                    FontSize="16"
                                    VerticalAlignment="Center">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Style.Triggers>
                                            <Trigger Property="Text" Value="">
                                                <Setter Property="Background">
                                                    <Setter.Value>
                                                        <VisualBrush AlignmentX="Left" AlignmentY="Center" Stretch="None">
                                                            <VisualBrush.Visual>
                                                                <Label Content="Search Spoonacular recipes..."
                                                                      Foreground="{StaticResource TextSecondaryBrush}"
                                                                      FontSize="16"/>
                                                            </VisualBrush.Visual>
                                                        </VisualBrush>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>

                            <Button Grid.Column="2"
                                   Content="Clear"
                                   Style="{StaticResource ClearButtonStyle}"
                                   Command="{Binding ClearFiltersCommand}"
                                   Visibility="{Binding SearchText, Converter={StaticResource StringToVisibilityConverter}}"/>
                        </Grid>
                    </Border>

                    <!-- Quick Action Buttons -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button Content="🎲 Random"
                               Command="{Binding LoadRandomRecipesCommand}"
                               Style="{StaticResource SecondaryButtonStyle}"
                               Padding="16,12"
                               Margin="0,0,8,0"/>

                        <Button Content="🔄 Refresh"
                               Command="{Binding RefreshCommand}"
                               Style="{StaticResource SecondaryButtonStyle}"
                               Padding="16,12"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Category Filters -->
        <Border Grid.Row="2" Style="{StaticResource DetailCardStyle}" Margin="0,0,0,16" Padding="24">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                    <TextBlock Text="🗂️" FontSize="20" Margin="0,0,8,0" VerticalAlignment="Center"/>
                    <TextBlock Text="Filter by Categories"
                              FontSize="18"
                              FontWeight="Bold"
                              Foreground="{StaticResource TextPrimaryBrush}"
                              VerticalAlignment="Center"/>
                </StackPanel>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Dish Type Filter -->
                    <StackPanel Grid.Column="0" Margin="0,0,16,0">
                        <TextBlock Text="Dish Type"
                                  FontSize="14"
                                  FontWeight="SemiBold"
                                  Foreground="{StaticResource TextPrimaryBrush}"
                                  Margin="0,0,0,8"/>
                        <ComboBox ItemsSource="{Binding Categories}"
                                 SelectedItem="{Binding SelectedCategory}"
                                 FontSize="14"
                                 Padding="12,10">
                            <ComboBox.Style>
                                <Style TargetType="ComboBox">
                                    <Style.Triggers>
                                        <Trigger Property="SelectedItem" Value="{x:Null}">
                                            <Setter Property="Text" Value="All Dishes"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ComboBox.Style>
                        </ComboBox>
                    </StackPanel>

                    <!-- Cuisine Filter -->
                    <StackPanel Grid.Column="1" Margin="0,0,16,0">
                        <TextBlock Text="Cuisine"
                                  FontSize="14"
                                  FontWeight="SemiBold"
                                  Foreground="{StaticResource TextPrimaryBrush}"
                                  Margin="0,0,0,8"/>
                        <ComboBox ItemsSource="{Binding Cuisines}"
                                 SelectedItem="{Binding SelectedCuisine}"
                                 FontSize="14"
                                 Padding="12,10">
                            <ComboBox.Style>
                                <Style TargetType="ComboBox">
                                    <Style.Triggers>
                                        <Trigger Property="SelectedItem" Value="{x:Null}">
                                            <Setter Property="Text" Value="All Cuisines"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ComboBox.Style>
                        </ComboBox>
                    </StackPanel>

                    <!-- Diet Filter -->
                    <StackPanel Grid.Column="2" Margin="0,0,16,0">
                        <TextBlock Text="Diet"
                                  FontSize="14"
                                  FontWeight="SemiBold"
                                  Foreground="{StaticResource TextPrimaryBrush}"
                                  Margin="0,0,0,8"/>
                        <ComboBox ItemsSource="{Binding Diets}"
                                 SelectedItem="{Binding SelectedDiet}"
                                 FontSize="14"
                                 Padding="12,10">
                            <ComboBox.Style>
                                <Style TargetType="ComboBox">
                                    <Style.Triggers>
                                        <Trigger Property="SelectedItem" Value="{x:Null}">
                                            <Setter Property="Text" Value="All Diets"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ComboBox.Style>
                        </ComboBox>
                    </StackPanel>

                    <!-- Clear Filters Button -->
                    <Button Grid.Column="3"
                           Content="🗑️ Clear Filters"
                           Command="{Binding ClearFiltersCommand}"
                           Style="{StaticResource SecondaryButtonStyle}"
                           Padding="16,12"
                           VerticalAlignment="Bottom"/>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Success/Error Messages -->
        <StackPanel Grid.Row="3" Margin="0,0,0,16">
            <!-- Success Message -->
            <Border Background="#E8F5E8"
                   BorderBrush="{StaticResource SuccessBrush}"
                   BorderThickness="1"
                   CornerRadius="12"
                   Padding="16,12"
                   Margin="0,0,0,12"
                   Visibility="{Binding SuccessMessage, Converter={StaticResource StringToVisibilityConverter}}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="✅" FontSize="16" Margin="0,0,8,0"/>
                    <TextBlock Text="{Binding SuccessMessage}"
                              FontSize="14"
                              FontWeight="Medium"
                              Foreground="#2E7D32"
                              VerticalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Error Message -->
            <Border Background="#FFF3E0"
                   BorderBrush="{StaticResource ErrorBrush}"
                   BorderThickness="1"
                   CornerRadius="12"
                   Padding="16,12"
                   Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="⚠️" FontSize="16" Margin="0,0,8,0"/>
                    <TextBlock Text="{Binding ErrorMessage}"
                              FontSize="14"
                              FontWeight="Medium"
                              Foreground="#D32F2F"
                              VerticalAlignment="Center"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Enhanced Recipe Grid -->
        <ScrollViewer Grid.Row="4" VerticalScrollBarVisibility="Auto" Padding="8">
            <Grid>
                <!-- Recipes -->
                <ItemsControl ItemsSource="{Binding Recipes}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="3" Margin="8"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource EnhancedRecipeCardStyle}"
                                   Margin="8"
                                   Height="400"
                                   MinWidth="280"
                                   Cursor="Hand">
                                <Border.InputBindings>
                                    <MouseBinding Gesture="LeftClick"
                                                Command="{Binding DataContext.ViewRecipeCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"/>
                                </Border.InputBindings>

                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="200"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <!-- Recipe Image -->
                                    <Border Grid.Row="0"
                                           Background="{StaticResource PrimaryGradientBrush}"
                                           CornerRadius="20,20,0,0">
                                        <Grid>
                                            <!-- Recipe Image or Fallback -->
                                            <Border CornerRadius="20,20,0,0" ClipToBounds="True">
                                                <Grid>
                                                    <!-- Fallback icon -->
                                                    <TextBlock Text="🍽️"
                                                              FontSize="48"
                                                              HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"
                                                              Foreground="White"/>

                                                    <!-- Actual image if available -->
                                                    <Image Source="{Binding Image}"
                                                          Stretch="UniformToFill"
                                                          HorizontalAlignment="Center"
                                                          VerticalAlignment="Center">
                                                        <Image.Style>
                                                            <Style TargetType="Image">
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Image}" Value="">
                                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Image}" Value="{x:Null}">
                                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Image.Style>
                                                    </Image>
                                                </Grid>
                                            </Border>

                                            <!-- Spoonacular Badge -->
                                            <Border Style="{StaticResource SpoonacularBadgeStyle}">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="🌐" FontSize="12" Margin="0,0,4,0"/>
                                                    <TextBlock Text="Spoonacular"
                                                              FontSize="10"
                                                              FontWeight="SemiBold"
                                                              Foreground="White"/>
                                                </StackPanel>
                                            </Border>
                                        </Grid>
                                    </Border>

                                    <!-- Recipe Info -->
                                    <StackPanel Grid.Row="1" Margin="20,16,20,20">
                                        <TextBlock Text="{Binding Title}"
                                                  FontSize="16"
                                                  FontWeight="Bold"
                                                  Foreground="{StaticResource TextPrimaryBrush}"
                                                  TextTrimming="CharacterEllipsis"
                                                  MaxHeight="48"
                                                  TextWrapping="Wrap"
                                                  Margin="0,0,0,16"/>

                                        <!-- Action Buttons -->
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- View Button -->
                                            <Button Grid.Column="0"
                                                   Content="👁️ View Details"
                                                   Command="{Binding DataContext.ViewRecipeCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                   CommandParameter="{Binding}"
                                                   Style="{StaticResource SecondaryButtonStyle}"
                                                   Padding="12,8"
                                                   FontSize="12"
                                                   Margin="0,0,8,0"/>

                                            <!-- Import Button -->
                                            <Button Grid.Column="1"
                                                   Content="📥"
                                                   Command="{Binding DataContext.ImportRecipeCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                   CommandParameter="{Binding}"
                                                   Style="{StaticResource ImportButtonStyle}"
                                                   Width="36"
                                                   Height="36"
                                                   FontSize="14"
                                                   IsEnabled="{Binding DataContext.IsAuthenticated, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                   ToolTip="Import to My Recipes"/>
                                        </Grid>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Enhanced Loading Indicator -->
                <Grid Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center">
                    <Border Background="{StaticResource SurfaceBrush}"
                           CornerRadius="16"
                           Padding="32,24" Margin="0,-58,0,58">
                        <StackPanel HorizontalAlignment="Center">
                            <Border Width="48" Height="48"
                                   Background="{StaticResource PrimaryBrush}"
                                   CornerRadius="24"
                                   Margin="0,0,0,16">
                                <TextBlock Text="🌐"
                                          FontSize="24"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          Foreground="White"/>
                            </Border>

                            <ProgressBar Width="120" Height="4"
                                        IsIndeterminate="True"
                                        Background="{StaticResource OutlineVariantBrush}"
                                        Foreground="{StaticResource PrimaryBrush}"
                                        Margin="0,0,0,12"/>

                            <TextBlock Text="Discovering recipes from Spoonacular..."
                                      HorizontalAlignment="Center"
                                      FontSize="14"
                                      FontWeight="Medium"
                                      Foreground="{StaticResource TextSecondaryBrush}"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Enhanced Empty State -->
                <Grid Visibility="{Binding Recipes.Count, Converter={StaticResource CountToVisibilityConverter}}"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center">
                    <StackPanel HorizontalAlignment="Center" MaxWidth="400">
                        <Border Background="{StaticResource SurfaceVariantBrush}"
                               Width="120" Height="120"
                               CornerRadius="60"
                               Margin="0,0,0,24">
                            <TextBlock Text="🌐" FontSize="48" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                        <TextBlock Text="No Recipes Found"
                                  FontSize="24"
                                  FontWeight="Bold"
                                  Foreground="{StaticResource TextPrimaryBrush}"
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,8"/>

                        <TextBlock Text="Try adjusting your search or category filters!"
                                  FontSize="16"
                                  Foreground="{StaticResource TextSecondaryBrush}"
                                  HorizontalAlignment="Center"
                                  TextAlignment="Center"
                                  TextWrapping="Wrap"
                                  Margin="0,0,0,24"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Content="🎲 Random Recipes"
                                   Command="{Binding LoadRandomRecipesCommand}"
                                   Style="{StaticResource SecondaryButtonStyle}"
                                   Padding="20,12"
                                   FontSize="14"
                                   Margin="0,0,12,0"/>

                            <Button Content="🗑️ Clear Filters"
                                   Command="{Binding ClearFiltersCommand}"
                                   Style="{StaticResource PrimaryButtonStyle}"
                                   Padding="20,12"
                                   FontSize="14"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>