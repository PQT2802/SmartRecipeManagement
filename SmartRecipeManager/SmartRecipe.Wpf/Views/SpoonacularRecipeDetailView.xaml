<UserControl x:Class="SmartRecipe.Wpf.Views.SpoonacularRecipeDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Background="{StaticResource BackgroundBrush}">

    <UserControl.Resources>
        <!-- Spoonacular Detail Card Style -->
        <Style x:Key="SpoonacularDetailCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}" />
            <Setter Property="CornerRadius" Value="20" />
            <Setter Property="Padding" Value="24" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#20000000" BlurRadius="20" ShadowDepth="10" Opacity="0.15"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Ingredient Card Style -->
        <Style x:Key="IngredientCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource SurfaceVariantBrush}" />
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="Padding" Value="16" />
            <Setter Property="Margin" Value="0,6" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#10000000" BlurRadius="8" ShadowDepth="2" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Step Card Style -->
        <Style x:Key="StepCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource SurfaceVariantBrush}" />
            <Setter Property="CornerRadius" Value="16" />
            <Setter Property="Padding" Value="20" />
            <Setter Property="Margin" Value="0,12" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#15000000" BlurRadius="12" ShadowDepth="4" Opacity="0.12"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- External Badge Style -->
        <Style x:Key="ExternalBadgeStyle" TargetType="Border">
            <Setter Property="Background" Value="#FF6B35"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Margin" Value="20"/>
        </Style>

        <!-- Back Button Style -->
        <Style x:Key="BackButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource SurfaceVariantBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="48"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                               CornerRadius="24">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                <Setter Property="TextBlock.Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="32">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header with Back Button -->
            <Grid Grid.Row="0" Margin="0,0,0,32">
                <Button HorizontalAlignment="Left"
                       Command="{Binding BackCommand}"
                       Style="{StaticResource BackButtonStyle}">
                    <TextBlock Text="←" FontSize="24" FontWeight="Bold"/>
                </Button>

                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Spoonacular Recipe"
                              FontSize="24"
                              FontWeight="Bold"
                              Foreground="{StaticResource TextPrimaryBrush}"
                              HorizontalAlignment="Center"/>
                    <TextBlock Text="Discover amazing recipes from the web"
                              FontSize="14"
                              Foreground="{StaticResource TextSecondaryBrush}"
                              HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>

            <!-- Recipe Hero Section -->
            <Border Grid.Row="1" Style="{StaticResource SpoonacularDetailCardStyle}" Margin="0,0,0,32">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="320"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Recipe Image/Header -->
                    <Border Grid.Row="0" 
                           Background="{StaticResource PrimaryGradientBrush}"
                           CornerRadius="16"
                           Margin="0,0,0,24">
                        <Grid>
                            <!-- Recipe Image Container -->
                            <Border CornerRadius="16" ClipToBounds="True">
                                <Grid>
                                    <!-- Fallback icon -->
                                    <TextBlock Text="🍽️" 
                                              FontSize="80"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Foreground="White"/>

                                    <!-- Actual image if available -->
                                    <Image Source="{Binding Recipe.Image}" 
                                          Stretch="UniformToFill"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center">
                                        <Image.Style>
                                            <Style TargetType="Image">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Recipe.Image}" Value="">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Recipe.Image}" Value="{x:Null}">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Image.Style>
                                    </Image>
                                </Grid>
                            </Border>

                            <!-- Spoonacular Badge -->
                            <Border Style="{StaticResource ExternalBadgeStyle}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🌐" FontSize="14" Margin="0,0,6,0"/>
                                    <TextBlock Text="Spoonacular" 
                                              FontSize="12"
                                              FontWeight="SemiBold"
                                              Foreground="White"/>
                                </StackPanel>
                            </Border>

                            <!-- Health Score Badge -->
                            <Border Background="#4CAF50"
                                   CornerRadius="12"
                                   Padding="12,8"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   Margin="20"
                                   Visibility="{Binding Recipe.HealthScore, Converter={StaticResource NullToVisibilityConverter}}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="💚" FontSize="14" Margin="0,0,6,0"/>
                                    <TextBlock Text="{Binding Recipe.HealthScore, StringFormat='Health: {0:F0}'}" 
                                              FontSize="12"
                                              FontWeight="SemiBold"
                                              Foreground="White"/>
                                </StackPanel>
                            </Border>

                            <!-- Fixed: Gradient overlay for better text readability -->
                            <Border CornerRadius="16">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0.7" EndPoint="0,1">
                                        <GradientStop Color="Transparent" Offset="0"/>
                                        <GradientStop Color="#80000000" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Recipe Info -->
                    <StackPanel Grid.Row="1">
                        <!-- Title and Summary -->
                        <TextBlock Text="{Binding Recipe.Title}" 
                                  FontSize="36"
                                  FontWeight="Bold"
                                  Foreground="{StaticResource TextPrimaryBrush}"
                                  TextWrapping="Wrap"
                                  Margin="0,0,0,16"/>

                        <TextBlock Text="{Binding CleanSummary}" 
                                  FontSize="16"
                                  Foreground="{StaticResource TextSecondaryBrush}"
                                  TextWrapping="Wrap"
                                  LineHeight="26"
                                  Margin="0,0,0,24"/>

                        <!-- Recipe Stats -->
                        <Grid Margin="0,0,0,24">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Ready Time -->
                            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                <Border Background="{StaticResource InfoBrush}"
                                       Width="56" Height="56"
                                       CornerRadius="28"
                                       Margin="0,0,0,12">
                                    <TextBlock Text="⏱️" 
                                              FontSize="24"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="{Binding Recipe.ReadyInMinutes}" 
                                          FontSize="20"
                                          FontWeight="Bold"
                                          Foreground="{StaticResource TextPrimaryBrush}"
                                          HorizontalAlignment="Center"/>
                                <TextBlock Text="minutes" 
                                          FontSize="12"
                                          Foreground="{StaticResource TextSecondaryBrush}"
                                          HorizontalAlignment="Center"/>
                            </StackPanel>

                            <!-- Servings -->
                            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                <Border Background="{StaticResource SuccessBrush}"
                                       Width="56" Height="56"
                                       CornerRadius="28"
                                       Margin="0,0,0,12">
                                    <TextBlock Text="👥" 
                                              FontSize="24"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="{Binding Recipe.Servings}" 
                                          FontSize="20"
                                          FontWeight="Bold"
                                          Foreground="{StaticResource TextPrimaryBrush}"
                                          HorizontalAlignment="Center"/>
                                <TextBlock Text="servings" 
                                          FontSize="12"
                                          Foreground="{StaticResource TextSecondaryBrush}"
                                          HorizontalAlignment="Center"/>
                            </StackPanel>

                            <!-- Health Score -->
                            <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                <Border Background="{StaticResource AccentBrush}"
                                       Width="56" Height="56"
                                       CornerRadius="28"
                                       Margin="0,0,0,12">
                                    <TextBlock Text="💚" 
                                              FontSize="24"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="{Binding Recipe.HealthScore, StringFormat='{}{0:F0}'}" 
                                          FontSize="20"
                                          FontWeight="Bold"
                                          Foreground="{StaticResource TextPrimaryBrush}"
                                          HorizontalAlignment="Center"/>
                                <TextBlock Text="health score" 
                                          FontSize="12"
                                          Foreground="{StaticResource TextSecondaryBrush}"
                                          HorizontalAlignment="Center"/>
                            </StackPanel>

                            <!-- Price -->
                            <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                                <Border Background="{StaticResource WarningBrush}"
                                       Width="56" Height="56"
                                       CornerRadius="28"
                                       Margin="0,0,0,12">
                                    <TextBlock Text="💰" 
                                              FontSize="24"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="{Binding Recipe.PricePerServing, StringFormat='${0:F2}'}" 
                                          FontSize="20"
                                          FontWeight="Bold"
                                          Foreground="{StaticResource TextPrimaryBrush}"
                                          HorizontalAlignment="Center"/>
                                <TextBlock Text="per serving" 
                                          FontSize="12"
                                          Foreground="{StaticResource TextSecondaryBrush}"
                                          HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Grid>

                        <!-- Recipe Meta Info -->
                        <Grid Margin="0,0,0,24">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Dish Type -->
                            <Border Grid.Column="0"
                                   Background="{StaticResource PrimaryBrush}"
                                   CornerRadius="16"
                                   Padding="16,12"
                                   Margin="0,0,8,0">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="🍽️" FontSize="20" HorizontalAlignment="Center" Margin="0,0,0,6"/>
                                    <TextBlock Text="{Binding PrimaryDishType}" 
                                              FontSize="14"
                                              FontWeight="SemiBold"
                                              Foreground="White"
                                              HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- Cuisine -->
                            <Border Grid.Column="1"
                                   Background="{StaticResource SecondaryBrush}"
                                   CornerRadius="16"
                                   Padding="16,12"
                                   Margin="4,0">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="🌍" FontSize="20" HorizontalAlignment="Center" Margin="0,0,0,6"/>
                                    <TextBlock Text="{Binding CuisineType}" 
                                              FontSize="14"
                                              FontWeight="SemiBold"
                                              Foreground="White"
                                              HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- Diet Info -->
                            <Border Grid.Column="2"
                                   Background="{StaticResource AccentBrush}"
                                   CornerRadius="16"
                                   Padding="16,12"
                                   Margin="8,0,0,0">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="🥗" FontSize="20" HorizontalAlignment="Center" Margin="0,0,0,6"/>
                                    <TextBlock Text="{Binding DietInfo}" 
                                              FontSize="14"
                                              FontWeight="SemiBold"
                                              Foreground="White"
                                              HorizontalAlignment="Center"
                                              TextTrimming="CharacterEllipsis"/>
                                </StackPanel>
                            </Border>
                        </Grid>

                        <!-- Action Buttons -->
                        <!-- Action Buttons -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Import Button - Fixed: Removed duplicate Style setting -->
                            <Button Grid.Column="0"
                                   Content="📥 Import to My Recipes"
                                   Command="{Binding ImportRecipeCommand}"
                                   Padding="20,16"
                                   FontSize="16"
                                   IsEnabled="{Binding IsAuthenticated}">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsImported}" Value="True">
                                                <Setter Property="Content" Value="✅ Recipe Imported"/>
                                                <Setter Property="Background" Value="{StaticResource SuccessBrush}"/>
                                                <Setter Property="IsEnabled" Value="False"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>

                            <!-- Source URL Button -->
                            <Button Grid.Column="2"
                                   Content="🔗 View Source"
                                   Command="{Binding OpenSourceUrlCommand}"
                                   Style="{StaticResource SecondaryButtonStyle}"
                                   Padding="20,16"
                                   FontSize="16"
                                   Visibility="{Binding Recipe.SourceUrl, Converter={StaticResource StringToVisibilityConverter}}"/>
                        </Grid>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Recipe Content -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="32"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Column: Ingredients -->
                <StackPanel Grid.Column="0">
                    <!-- Ingredients -->
                    <Border Style="{StaticResource SpoonacularDetailCardStyle}" Margin="0,0,0,32">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,24">
                                <TextBlock Text="🥘" FontSize="28" Margin="0,0,16,0" VerticalAlignment="Center"/>
                                <StackPanel>
                                    <TextBlock Text="Ingredients" 
                                              FontSize="24"
                                              FontWeight="Bold"
                                              Foreground="{StaticResource TextPrimaryBrush}"/>
                                    <TextBlock Text="{Binding Recipe.ExtendedIngredients.Count, StringFormat='{}{0} ingredients needed'}" 
                                              FontSize="14"
                                              Foreground="{StaticResource TextSecondaryBrush}"/>
                                </StackPanel>
                            </StackPanel>

                            <ItemsControl ItemsSource="{Binding Recipe.ExtendedIngredients}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource IngredientCardStyle}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Ingredient Image/Icon -->
                                                <Border Grid.Column="0"
                                                       Background="{StaticResource PrimaryBrush}"
                                                       Width="32" Height="32"
                                                       CornerRadius="16"
                                                       Margin="0,0,16,0">
                                                    <Grid>
                                                        <TextBlock Text="🥄" 
                                                                  FontSize="16"
                                                                  HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                                        <Image Source="{Binding Image, StringFormat='https://spoonacular.com/cdn/ingredients_100x100/{0}'}"
                                                              Width="32" Height="32"
                                                              Stretch="UniformToFill">
                                                            <Image.Style>
                                                                <Style TargetType="Image">
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding Image}" Value="">
                                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Image.Style>
                                                        </Image>
                                                    </Grid>
                                                </Border>

                                                <!-- Ingredient Name -->
                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Name}" 
                                                              FontSize="15"
                                                              FontWeight="Medium"
                                                              Foreground="{StaticResource TextPrimaryBrush}"
                                                              TextTrimming="CharacterEllipsis"/>
                                                    <TextBlock Text="{Binding Original}" 
                                                              FontSize="12"
                                                              Foreground="{StaticResource TextSecondaryBrush}"
                                                              TextTrimming="CharacterEllipsis"
                                                              Visibility="{Binding Original, Converter={StaticResource StringToVisibilityConverter}}"/>
                                                </StackPanel>

                                                <!-- Amount -->
                                                <TextBlock Grid.Column="2"
                                                          Text="{Binding Amount, StringFormat='{}{0:F1} {1}'}" 
                                                          FontSize="14"
                                                          FontWeight="SemiBold"
                                                          Foreground="{StaticResource AccentBrush}"
                                                          VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                    <!-- Nutrition Info -->
                    <Border Style="{StaticResource SpoonacularDetailCardStyle}" 
                           Visibility="{Binding Recipe.Nutrition, Converter={StaticResource NullToVisibilityConverter}}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                                <TextBlock Text="📊" FontSize="24" Margin="0,0,12,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Nutrition Facts" 
                                          FontSize="20"
                                          FontWeight="Bold"
                                          Foreground="{StaticResource TextPrimaryBrush}"/>
                            </StackPanel>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Calories -->
                                <Border Grid.Row="0" 
                                       Background="{StaticResource SurfaceVariantBrush}"
                                       CornerRadius="12"
                                       Padding="16"
                                       Margin="0,6">
                                    <Grid>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="🔥" FontSize="16" Margin="0,0,8,0"/>
                                            <TextBlock Text="Calories" 
                                                      FontSize="15"
                                                      Foreground="{StaticResource TextSecondaryBrush}"
                                                      VerticalAlignment="Center"/>
                                        </StackPanel>
                                        <TextBlock Text="{Binding Calories, StringFormat='{}{0:F0} cal'}" 
                                                  FontSize="15"
                                                  FontWeight="SemiBold"
                                                  Foreground="{StaticResource TextPrimaryBrush}"
                                                  HorizontalAlignment="Right"
                                                  VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>

                                <!-- Protein -->
                                <Border Grid.Row="1" 
                                       Background="{StaticResource SurfaceVariantBrush}"
                                       CornerRadius="12"
                                       Padding="16"
                                       Margin="0,6">
                                    <Grid>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="🥩" FontSize="16" Margin="0,0,8,0"/>
                                            <TextBlock Text="Protein" 
                                                      FontSize="15"
                                                      Foreground="{StaticResource TextSecondaryBrush}"
                                                      VerticalAlignment="Center"/>
                                        </StackPanel>
                                        <TextBlock Text="{Binding Protein, StringFormat='{}{0:F1}g'}" 
                                                  FontSize="15"
                                                  FontWeight="SemiBold"
                                                  Foreground="{StaticResource TextPrimaryBrush}"
                                                  HorizontalAlignment="Right"
                                                  VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>

                                <!-- Fat -->
                                <Border Grid.Row="2" 
                                       Background="{StaticResource SurfaceVariantBrush}"
                                       CornerRadius="12"
                                       Padding="16"
                                       Margin="0,6">
                                    <Grid>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="🧈" FontSize="16" Margin="0,0,8,0"/>
                                            <TextBlock Text="Fat" 
                                                      FontSize="15"
                                                      Foreground="{StaticResource TextSecondaryBrush}"
                                                      VerticalAlignment="Center"/>
                                        </StackPanel>
                                        <TextBlock Text="{Binding Fat, StringFormat='{}{0:F1}g'}" 
                                                  FontSize="15"
                                                  FontWeight="SemiBold"
                                                  Foreground="{StaticResource TextPrimaryBrush}"
                                                  HorizontalAlignment="Right"
                                                  VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>

                                <!-- Carbohydrates -->
                                <Border Grid.Row="3" 
                                       Background="{StaticResource SurfaceVariantBrush}"
                                       CornerRadius="12"
                                       Padding="16"
                                       Margin="0,6">
                                    <Grid>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="🍞" FontSize="16" Margin="0,0,8,0"/>
                                            <TextBlock Text="Carbohydrates" 
                                                      FontSize="15"
                                                      Foreground="{StaticResource TextSecondaryBrush}"
                                                      VerticalAlignment="Center"/>
                                        </StackPanel>
                                        <TextBlock Text="{Binding Carbohydrates, StringFormat='{}{0:F1}g'}" 
                                                  FontSize="15"
                                                  FontWeight="SemiBold"
                                                  Foreground="{StaticResource TextPrimaryBrush}"
                                                  HorizontalAlignment="Right"
                                                  VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Right Column: Instructions -->
                <StackPanel Grid.Column="2">
                    <!-- Instructions -->
                    <Border Style="{StaticResource SpoonacularDetailCardStyle}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,24">
                                <TextBlock Text="📋" FontSize="28" Margin="0,0,16,0" VerticalAlignment="Center"/>
                                <StackPanel>
                                    <TextBlock Text="Instructions" 
                                              FontSize="24"
                                              FontWeight="Bold"
                                              Foreground="{StaticResource TextPrimaryBrush}"/>
                                    <TextBlock Text="Follow these steps to cook" 
                                              FontSize="14"
                                              Foreground="{StaticResource TextSecondaryBrush}"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- Instructions from AnalyzedInstructions -->
                            <ItemsControl ItemsSource="{Binding Recipe.AnalyzedInstructions}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <!-- Instruction Group Title -->
                                            <TextBlock Text="{Binding Name}" 
                                                      FontSize="18"
                                                      FontWeight="SemiBold"
                                                      Foreground="{StaticResource TextPrimaryBrush}"
                                                      Margin="0,0,0,12"
                                                      Visibility="{Binding Name, Converter={StaticResource StringToVisibilityConverter}}"/>

                                            <!-- Steps -->
                                            <ItemsControl ItemsSource="{Binding Steps}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border Style="{StaticResource StepCardStyle}">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                    <ColumnDefinition Width="20"/>
                                                                    <ColumnDefinition Width="*"/>
                                                                </Grid.ColumnDefinitions>

                                                                <!-- Step Number -->
                                                                <Border Grid.Column="0"
                                                                       Background="{StaticResource PrimaryGradientBrush}"
                                                                       Width="48" Height="48"
                                                                       CornerRadius="24">
                                                                    <TextBlock Text="{Binding Number}"
                                                                              FontSize="18"
                                                                              FontWeight="Bold"
                                                                              Foreground="White"
                                                                              HorizontalAlignment="Center"
                                                                              VerticalAlignment="Center"/>
                                                                </Border>

                                                                <!-- Step Description -->
                                                                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                                                    <TextBlock Text="{Binding Step}" 
                                                                              FontSize="15"
                                                                              Foreground="{StaticResource TextPrimaryBrush}"
                                                                              TextWrapping="Wrap"
                                                                              LineHeight="22"/>

                                                                    <!-- Equipment if any -->
                                                                    <ItemsControl ItemsSource="{Binding Equipment}"
                                                                                 Margin="0,8,0,0"
                                                                                 Visibility="{Binding Equipment.Count, Converter={StaticResource CountToVisibilityConverter}}">
                                                                        <ItemsControl.ItemsPanel>
                                                                            <ItemsPanelTemplate>
                                                                                <WrapPanel Orientation="Horizontal"/>
                                                                            </ItemsPanelTemplate>
                                                                        </ItemsControl.ItemsPanel>
                                                                        <ItemsControl.ItemTemplate>
                                                                            <DataTemplate>
                                                                                <Border Background="{StaticResource InfoBrush}"
                                                                                       CornerRadius="8"
                                                                                       Padding="8,4"
                                                                                       Margin="0,0,6,4">
                                                                                    <TextBlock Text="{Binding Name}"
                                                                                              FontSize="11"
                                                                                              Foreground="White"/>
                                                                                </Border>
                                                                            </DataTemplate>
                                                                        </ItemsControl.ItemTemplate>
                                                                    </ItemsControl>
                                                                </StackPanel>
                                                            </Grid>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Empty State for Instructions -->
                            <Border Background="{StaticResource SurfaceVariantBrush}"
                                   CornerRadius="16"
                                   Padding="32,24"
                                   Visibility="{Binding Recipe.AnalyzedInstructions.Count, Converter={StaticResource CountToVisibilityConverter}}">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="📝" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,12"/>
                                    <TextBlock Text="No detailed instructions available" 
                                              FontSize="16"
                                              Foreground="{StaticResource TextSecondaryBrush}"
                                              HorizontalAlignment="Center"
                                              Margin="0,0,0,8"/>
                                    <TextBlock Text="Check the source URL for cooking instructions" 
                                              FontSize="14"
                                              Foreground="{StaticResource TextSecondaryBrush}"
                                              HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>

            <!-- Success/Error Messages -->
            <StackPanel Grid.Row="0" Grid.RowSpan="3" VerticalAlignment="Top" Margin="0,100,0,0">
                <!-- Success Message -->
                <Border Background="#E8F5E8"
                       BorderBrush="{StaticResource SuccessBrush}"
                       BorderThickness="1"
                       CornerRadius="12"
                       Padding="16,12"
                       Margin="0,0,0,12"
                       HorizontalAlignment="Center"
                       Visibility="{Binding SuccessMessage, Converter={StaticResource StringToVisibilityConverter}}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="✅" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="{Binding SuccessMessage}"
                                  FontSize="14"
                                  FontWeight="Medium"
                                  Foreground="#2E7D32"
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Error Message -->
                <Border Background="#FFF3E0"
                       BorderBrush="{StaticResource ErrorBrush}"
                       BorderThickness="1"
                       CornerRadius="12"
                       Padding="16,12"
                       HorizontalAlignment="Center"
                       Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="⚠️" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="{Binding ErrorMessage}"
                                  FontSize="14"
                                  FontWeight="Medium"
                                  Foreground="#D32F2F"
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Loading Indicator -->
            <Grid Grid.Row="0" Grid.RowSpan="3"
                  Background="#80000000"
                  Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                <Border Background="{StaticResource SurfaceBrush}"
                       CornerRadius="20"
                       Padding="40,32"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center">
                    <StackPanel HorizontalAlignment="Center">
                        <Border Width="64" Height="64"
                               Background="{StaticResource PrimaryBrush}"
                               CornerRadius="32"
                               Margin="0,0,0,20">
                            <TextBlock Text="🌐" 
                                      FontSize="32"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      Foreground="White"/>
                        </Border>

                        <ProgressBar Width="140" Height="6" 
                                    IsIndeterminate="True"
                                    Background="{StaticResource OutlineVariantBrush}"
                                    Foreground="{StaticResource PrimaryBrush}"
                                    Margin="0,0,0,16"/>

                        <TextBlock Text="Loading Spoonacular recipe..." 
                                  HorizontalAlignment="Center"
                                  FontSize="16"
                                  FontWeight="Medium"
                                  Foreground="{StaticResource TextSecondaryBrush}"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>