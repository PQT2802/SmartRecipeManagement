<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 🎨 Base Text Colors -->
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#212121" />
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#757575" />
    <SolidColorBrush x:Key="TextTertiaryBrush" Color="#9E9E9E" />
    <SolidColorBrush x:Key="TextWhiteBrush" Color="#FFFFFF" />

    <!-- 🎨 Primary Color Palette -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="#FF6B35" />
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="#FF8A5B" />
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="#E55A2B" />

    <!-- 🎨 Accent Colors -->
    <SolidColorBrush x:Key="AccentBrush" Color="#2196F3" />
    <SolidColorBrush x:Key="AccentLightBrush" Color="#64B5F6" />
    <SolidColorBrush x:Key="AccentDarkBrush" Color="#1976D2" />

    <!-- 🎨 Secondary Color Palette -->
    <SolidColorBrush x:Key="SecondaryBrush" Color="#4CAF50" />
    <SolidColorBrush x:Key="SecondaryLightBrush" Color="#81C784" />
    <SolidColorBrush x:Key="SecondaryDarkBrush" Color="#388E3C" />

    <!-- 🎨 Background Colors -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="#F8F9FA" />
    <SolidColorBrush x:Key="BackgroundSecondaryBrush" Color="#FFFFFF" />
    <SolidColorBrush x:Key="BackgroundDarkBrush" Color="#263238" />

    <!-- 🎨 Status Colors -->
    <SolidColorBrush x:Key="SuccessBrush" Color="#4CAF50" />
    <SolidColorBrush x:Key="WarningBrush" Color="#FF9800" />
    <SolidColorBrush x:Key="ErrorBrush" Color="#F44336" />
    <SolidColorBrush x:Key="InfoBrush" Color="#2196F3" />

    <!-- 🎨 Surface Colors -->
    <SolidColorBrush x:Key="SurfaceBrush" Color="#FFFFFF" />
    <SolidColorBrush x:Key="SurfaceVariantBrush" Color="#F5F5F5" />
    <SolidColorBrush x:Key="OutlineBrush" Color="#E0E0E0" />
    <SolidColorBrush x:Key="OutlineVariantBrush" Color="#EEEEEE" />

    <!-- 🎨 Gradient Brushes -->
    <LinearGradientBrush x:Key="PrimaryGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FF6B35" Offset="0"/>
        <GradientStop Color="#F7931E" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="BackgroundGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#F8F9FA" Offset="0"/>
        <GradientStop Color="#E8F4FD" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="CardGradientBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#FFFFFF" Offset="0"/>
        <GradientStop Color="#FAFAFA" Offset="1"/>
    </LinearGradientBrush>

    <!-- 🎨 Shadow Colors -->
    <SolidColorBrush x:Key="ShadowLightBrush" Color="#10000000" />
    <SolidColorBrush x:Key="ShadowMediumBrush" Color="#20000000" />
    <SolidColorBrush x:Key="ShadowDarkBrush" Color="#40000000" />

</ResourceDictionary>