<UserControl x:Class="SmartRecipe.Wpf.Views.RecipeListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Background="{StaticResource BackgroundBrush}">

    <UserControl.Resources>
        <!-- Enhanced Recipe Card Style -->
        <Style x:Key="RecipeCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}" />
            <Setter Property="CornerRadius" Value="20" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#15000000" BlurRadius="16" ShadowDepth="6" Opacity="0.12"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Animated Recipe Card Style -->
        <Style x:Key="AnimatedRecipeCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}" />
            <Setter Property="CornerRadius" Value="20" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#15000000" BlurRadius="16" ShadowDepth="6" Opacity="0.12"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#25000000" BlurRadius="24" ShadowDepth="12" Opacity="0.2"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <TranslateTransform Y="-8"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Filter Button Style -->
        <Style x:Key="FilterButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource SurfaceVariantBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource OutlineBrush}"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                               BorderBrush="{TemplateBinding BorderBrush}"
                               BorderThickness="{TemplateBinding BorderThickness}"
                               CornerRadius="12"
                               Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Favorite Button Style -->
        <Style x:Key="FavoriteButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#40000000"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                               CornerRadius="20"
                               Width="{TemplateBinding Width}"
                               Height="{TemplateBinding Height}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#60000000"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Clear Button Style -->
        <Style x:Key="ClearButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="Padding" Value="16,0,20,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                               Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F0F0F0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Enhanced Header -->
        <Border Grid.Row="0" Style="{StaticResource RecipeCardStyle}" Margin="0,0,0,32" Padding="32">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <TextBlock Text="ðŸ½ï¸" FontSize="32" Margin="0,0,16,0" VerticalAlignment="Center"/>
                        <StackPanel>
                            <TextBlock Text="Recipe Discovery" 
                                      FontSize="28" 
                                      FontWeight="Bold"
                                      Foreground="{StaticResource TextPrimaryBrush}"/>
                            <TextBlock Text="Explore our collection of amazing recipes" 
                                      FontSize="16"
                                      Foreground="{StaticResource TextSecondaryBrush}"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Quick Stats -->
                    <StackPanel Orientation="Horizontal">
                        <Border Background="{StaticResource InfoBrush}"
                               CornerRadius="12"
                               Padding="12,6"
                               Margin="0,0,12,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ“Š" FontSize="14" Margin="0,0,6,0"/>
                                <TextBlock Text="1,234 Total Recipes" 
                                          FontSize="12"
                                          FontWeight="SemiBold"
                                          Foreground="White"/>
                            </StackPanel>
                        </Border>

                        <Border Background="{StaticResource SuccessBrush}"
                               CornerRadius="12"
                               Padding="12,6">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ”¥" FontSize="14" Margin="0,0,6,0"/>
                                <TextBlock Text="25 New This Week" 
                                          FontSize="12"
                                          FontWeight="SemiBold"
                                          Foreground="White"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </StackPanel>

                <Button Grid.Column="1"
                       Content="âž• Create New Recipe"
                       Command="{Binding CreateRecipeCommand}"
                       Style="{StaticResource PrimaryButtonStyle}"
                       VerticalAlignment="Center"
                       Padding="20,16"
                       FontSize="16"/>
            </Grid>
        </Border>

        <!-- Enhanced Search and Filters -->
        <Border Grid.Row="1" Style="{StaticResource RecipeCardStyle}" Margin="0,0,0,32" Padding="32,24">
            <StackPanel>
                <!-- Search Section -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="24"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="200"/>
                    </Grid.ColumnDefinitions>

                    <!-- Enhanced Search Box -->
                    <Border Grid.Column="0" 
                           BorderBrush="{StaticResource OutlineBrush}"
                           BorderThickness="1"
                           CornerRadius="16"
                           Background="White">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" 
                                      Text="ðŸ”" 
                                      FontSize="18"
                                      Margin="20,0,12,0"
                                      VerticalAlignment="Center"
                                      Foreground="{StaticResource TextSecondaryBrush}"/>

                            <TextBox Grid.Column="1"
                                    Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}"
                                    BorderThickness="0"
                                    Background="Transparent"
                                    Padding="0,16"
                                    FontSize="16"
                                    VerticalAlignment="Center">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Style.Triggers>
                                            <Trigger Property="Text" Value="">
                                                <Setter Property="Background">
                                                    <Setter.Value>
                                                        <VisualBrush AlignmentX="Left" AlignmentY="Center" Stretch="None">
                                                            <VisualBrush.Visual>
                                                                <Label Content="Search recipes, ingredients, or cuisines..." 
                                                                      Foreground="{StaticResource TextSecondaryBrush}"
                                                                      FontSize="16"/>
                                                            </VisualBrush.Visual>
                                                        </VisualBrush>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>

                            <Button Grid.Column="2"
                                   Content="Clear"
                                   Style="{StaticResource ClearButtonStyle}"
                                   Visibility="{Binding SearchTerm, Converter={StaticResource StringToVisibilityConverter}}"/>
                        </Grid>
                    </Border>

                    <!-- Category Filter -->
                    <Border Grid.Column="2"
                           BorderBrush="{StaticResource OutlineBrush}"
                           BorderThickness="1"
                           CornerRadius="12"
                           Background="White">
                        <ComboBox ItemsSource="{Binding Categories}"
                                 SelectedItem="{Binding SelectedCategory}"
                                 Padding="16,12"
                                 FontSize="14"
                                 BorderThickness="0"
                                 Background="Transparent">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="ðŸ·ï¸" FontSize="14" Margin="0,0,8,0"/>
                                        <TextBlock Text="{Binding Name}" FontSize="14"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </Border>

                    <!-- Sort Options -->
                    <Border Grid.Column="4"
                           BorderBrush="{StaticResource OutlineBrush}"
                           BorderThickness="1"
                           CornerRadius="12"
                           Background="White">
                        <ComboBox ItemsSource="{Binding SortOptions}"
                                 SelectedItem="{Binding SelectedSortOption}"
                                 Padding="16,12"
                                 FontSize="14"
                                 BorderThickness="0"
                                 Background="Transparent">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="ðŸ“Š" FontSize="14" Margin="0,0,8,0"/>
                                        <TextBlock Text="{Binding Name}" FontSize="14"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </Border>
                </Grid>

                <!-- Filter Tags -->
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Popular:" 
                              FontSize="14"
                              FontWeight="Medium"
                              Foreground="{StaticResource TextSecondaryBrush}"
                              VerticalAlignment="Center"
                              Margin="0,0,16,0"/>

                    <Button Content="ðŸ• Pizza" Style="{StaticResource FilterButtonStyle}" Margin="0,0,8,0"/>
                    <Button Content="ðŸ Pasta" Style="{StaticResource FilterButtonStyle}" Margin="0,0,8,0"/>
                    <Button Content="ðŸ¥— Salad" Style="{StaticResource FilterButtonStyle}" Margin="0,0,8,0"/>
                    <Button Content="ðŸ° Desserts" Style="{StaticResource FilterButtonStyle}" Margin="0,0,8,0"/>
                    <Button Content="ðŸ¥˜ Main Course" Style="{StaticResource FilterButtonStyle}"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Enhanced Recipe Grid -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <Grid>
                <!-- Recipes -->
                <ItemsControl ItemsSource="{Binding Recipes}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="3"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource AnimatedRecipeCardStyle}"
                                   Margin="12"
                                   Height="400"
                                   Cursor="Hand">
                                <Border.InputBindings>
                                    <MouseBinding Gesture="LeftClick" 
                                                Command="{Binding DataContext.ViewRecipeCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"/>
                                </Border.InputBindings>

                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="200"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <!-- Enhanced Recipe Image -->
                                    <Border Grid.Row="0" 
                                           Background="{StaticResource PrimaryGradientBrush}"
                                           CornerRadius="20,20,0,0">
                                        <Grid>
                                            <TextBlock Text="ðŸ½ï¸" 
                                                      FontSize="56"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"
                                                      Foreground="White"/>

                                            <!-- Recipe Rating -->
                                            <Border Background="#40000000"
                                                   CornerRadius="12"
                                                   Padding="12,6"
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Top"
                                                   Margin="16">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="â­" FontSize="14" Margin="0,0,4,0"/>
                                                    <TextBlock Text="4.8" 
                                                              FontSize="12"
                                                              FontWeight="Bold"
                                                              Foreground="White"/>
                                                </StackPanel>
                                            </Border>

                                            <!-- Favorite Button -->
                                            <Button Style="{StaticResource FavoriteButtonStyle}"
                                                   HorizontalAlignment="Right"
                                                   VerticalAlignment="Top"
                                                   Margin="16">
                                                <TextBlock Text="ðŸ¤" FontSize="18"/>
                                            </Button>
                                        </Grid>
                                    </Border>

                                    <!-- Enhanced Recipe Info -->
                                    <StackPanel Grid.Row="1" Margin="20,16,20,20">
                                        <TextBlock Text="{Binding Title}" 
                                                  FontSize="18"
                                                  FontWeight="Bold"
                                                  Foreground="{StaticResource TextPrimaryBrush}"
                                                  TextTrimming="CharacterEllipsis"
                                                  Margin="0,0,0,8"/>

                                        <TextBlock Text="{Binding Description}" 
                                                  FontSize="14"
                                                  Foreground="{StaticResource TextSecondaryBrush}"
                                                  TextTrimming="CharacterEllipsis"
                                                  MaxHeight="40"
                                                  TextWrapping="Wrap"
                                                  Margin="0,0,0,16"/>

                                        <!-- Recipe Metrics -->
                                        <Grid Margin="0,0,0,16">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                                <TextBlock Text="â±ï¸" FontSize="16" HorizontalAlignment="Center"/>
                                                <TextBlock Text="{Binding TotalTimeMinutes}" 
                                                          FontSize="14"
                                                          FontWeight="Bold"
                                                          Foreground="{StaticResource TextPrimaryBrush}"
                                                          HorizontalAlignment="Center"/>
                                                <TextBlock Text="minutes" 
                                                          FontSize="12"
                                                          Foreground="{StaticResource TextSecondaryBrush}"
                                                          HorizontalAlignment="Center"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                                <TextBlock Text="ðŸ‘¥" FontSize="16" HorizontalAlignment="Center"/>
                                                <TextBlock Text="{Binding Servings}" 
                                                          FontSize="14"
                                                          FontWeight="Bold"
                                                          Foreground="{StaticResource TextPrimaryBrush}"
                                                          HorizontalAlignment="Center"/>
                                                <TextBlock Text="servings" 
                                                          FontSize="12"
                                                          Foreground="{StaticResource TextSecondaryBrush}"
                                                          HorizontalAlignment="Center"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                                <TextBlock Text="â¤ï¸" FontSize="16" HorizontalAlignment="Center"/>
                                                <TextBlock Text="{Binding LikesCount}" 
                                                          FontSize="14"
                                                          FontWeight="Bold"
                                                          Foreground="{StaticResource TextPrimaryBrush}"
                                                          HorizontalAlignment="Center"/>
                                                <TextBlock Text="likes" 
                                                          FontSize="12"
                                                          Foreground="{StaticResource TextSecondaryBrush}"
                                                          HorizontalAlignment="Center"/>
                                            </StackPanel>
                                        </Grid>

                                        <!-- Category and Author -->
                                        <Grid>
                                            <Border Background="{StaticResource AccentBrush}"
                                                   CornerRadius="12"
                                                   Padding="12,6"
                                                   HorizontalAlignment="Left">
                                                <TextBlock Text="{Binding Category}" 
                                                          FontSize="12"
                                                          Foreground="White"
                                                          FontWeight="SemiBold"/>
                                            </Border>

                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                                <TextBlock Text="ðŸ‘¨â€ðŸ³" FontSize="14" Margin="0,0,4,0"/>
                                                <TextBlock Text="Chef John" 
                                                          FontSize="12"
                                                          Foreground="{StaticResource TextSecondaryBrush}"/>
                                            </StackPanel>
                                        </Grid>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Enhanced Loading Indicator -->
                <Grid Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center">
                    <Border Background="{StaticResource SurfaceBrush}"
                           CornerRadius="16"
                           Padding="32,24">
                        <StackPanel HorizontalAlignment="Center">
                            <Border Width="48" Height="48"
                                   Background="{StaticResource PrimaryBrush}"
                                   CornerRadius="24"
                                   Margin="0,0,0,16">
                                <TextBlock Text="ðŸ³" 
                                          FontSize="24"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          Foreground="White"/>
                            </Border>

                            <ProgressBar Width="120" Height="4" 
                                        IsIndeterminate="True"
                                        Background="{StaticResource OutlineVariantBrush}"
                                        Foreground="{StaticResource PrimaryBrush}"
                                        Margin="0,0,0,12"/>

                            <TextBlock Text="Loading delicious recipes..." 
                                      HorizontalAlignment="Center"
                                      FontSize="14"
                                      FontWeight="Medium"
                                      Foreground="{StaticResource TextSecondaryBrush}"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Enhanced Empty State -->
                <Grid Visibility="{Binding IsEmpty, Converter={StaticResource BoolToVisibilityConverter}}"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center">
                    <StackPanel HorizontalAlignment="Center" MaxWidth="400">
                        <Border Background="{StaticResource SurfaceVariantBrush}"
                               Width="120" Height="120"
                               CornerRadius="60"
                               Margin="0,0,0,24">
                            <TextBlock Text="ðŸ”" FontSize="48" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                        <TextBlock Text="No Recipes Found" 
                                  FontSize="24"
                                  FontWeight="Bold"
                                  Foreground="{StaticResource TextPrimaryBrush}"
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,8"/>

                        <TextBlock Text="We couldn't find any recipes matching your search criteria. Try adjusting your filters or create a new recipe to get started." 
                                  FontSize="16"
                                  Foreground="{StaticResource TextSecondaryBrush}"
                                  HorizontalAlignment="Center"
                                  TextAlignment="Center"
                                  TextWrapping="Wrap"
                                  Margin="0,0,0,24"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Content="ðŸ”„ Clear Filters"
                                   Style="{StaticResource SecondaryButtonStyle}"
                                   Padding="20,12"
                                   FontSize="14"
                                   Margin="0,0,12,0"/>

                            <Button Content="âž• Create Recipe"
                                   Command="{Binding CreateRecipeCommand}"
                                   Style="{StaticResource PrimaryButtonStyle}"
                                   Padding="20,12"
                                   FontSize="14"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>